<UserControl x:Class="Vine.NotificationControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
             FontFamily="{StaticResource PhoneFontFamilyNormal}" FontSize="{StaticResource PhoneFontSizeNormal}"
             Foreground="{StaticResource PhoneForegroundBrush}" d:DesignHeight="100" d:DesignWidth="124">

    <Grid x:Name="LayoutRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <Image x:Name="Avatar" Tap="Avatar_Tap" VerticalAlignment="Top" Height="60" Width="60"
               Stretch="UniformToFill" Margin="0,0,12,0">
            <Image.Clip>
                <EllipseGeometry Center="30,30" RadiusX="30" RadiusY="30"/>
            </Image.Clip>
        </Image>
        <StackPanel Grid.Column="1">
            <RichTextBox x:Name="BodyText" Margin="-12,0" Foreground="{StaticResource ThemeTextBrush}" TextWrapping="Wrap" FontSize="22" />
            <TextBlock x:Name="Date" Foreground="{StaticResource DarkGreyBrush}" FontSize="17.333"
                       FontFamily="Segoe WP Light" />
        </StackPanel>
        <Border x:Name="PicturePanel"  Tap="MainPicture_Tap"  Background="{StaticResource GreyBrush}" Margin="12,6,0,0" Grid.Column="2"   VerticalAlignment="Top" Height="60" Width="60">
            <Image x:Name="Picture" Stretch="UniformToFill"  />
        </Border>

    </Grid>
</UserControl>