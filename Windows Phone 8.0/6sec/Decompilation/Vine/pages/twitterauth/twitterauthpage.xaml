<phone:PhoneApplicationPage x:Class="Vine.TwitterAuthPage"
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
                            xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            FontFamily="{StaticResource PhoneFontFamilyNormal}" FontSize="{StaticResource PhoneFontSizeNormal}"
                            Foreground="{StaticResource PhoneForegroundBrush}" SupportedOrientations="Portrait" Orientation="Portrait"
                            mc:Ignorable="d" shell:SystemTray.IsVisible="True" shell:SystemTray.Opacity="0"
                            shell:SystemTray.ForegroundColor="{StaticResource DarkGreyColor}"  d:DesignHeight="768" d:DesignWidth="480">
    <phone:PhoneApplicationPage.Resources>
        <Storyboard x:Name="StoryboardLaunch" />
        <Storyboard x:Name="StoryboardShowLogin" />
        <Storyboard x:Name="StoryboardHideLogin" />
        <Storyboard x:Name="StoryboardShowCreate" />
        <Storyboard x:Name="StoryboardHideCreate" />
        <Storyboard x:Name="StoryboardHideTwitter">
            <DoubleAnimationUsingKeyFrames
                Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)"
                Storyboard.TargetName="TwitterPanel">
                <EasingDoubleKeyFrame KeyTime="0" Value="0" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="800">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CircleEase EasingMode="EaseIn" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Name="StoryboardShowTwitter">
            <DoubleAnimationUsingKeyFrames
                Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)"
                Storyboard.TargetName="TwitterPanel">
                <EasingDoubleKeyFrame KeyTime="0" Value="800" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <CircleEase EasingMode="EaseOut" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

    </phone:PhoneApplicationPage.Resources>

    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot">


        <!--ContentPanel - place additional content here-->


        <!--ContentPanel - place additional content here-->
        <Grid x:Name="TwitterPanel" Background="{StaticResource NoStripeBrush}">
            <StackPanel Margin="12,0" RenderTransformOrigin="0.5,0.5">

                <TextBlock Text="{Binding LocalizedResources.SignInTwitter, Source={StaticResource LocalizedStrings}}"
                           HorizontalAlignment="Left" FontFamily="Segoe WP Light" FontSize="29.333" Margin="12,32,0,12"
                           Foreground="{StaticResource DarkGreyBrush}" />
                <TextBlock
                    Text="{Binding LocalizedResources.UsernameOrEmail, Source={StaticResource LocalizedStrings}}" Margin="12,0,0,0"
                    Foreground="{StaticResource DarkGreyBrush}" />
                <TextBox x:Name="EmailTwitter" KeyUp="EmailTxt_KeyUp" InputScope="EmailUserName" />
                <TextBlock Text="{Binding LocalizedResources.Password, Source={StaticResource LocalizedStrings}}"
                           Margin="12,0,0,0" Foreground="{StaticResource DarkGreyBrush}" />
                <PasswordBox x:Name="PasswordTwitter" KeyUp="Password_KeyUp" />
                <Button Content="{Binding LocalizedResources.SignIn, Source={StaticResource LocalizedStrings}}"
                        x:Name="CreateButton1" Click="TwitterSignIn_Click" Background="{StaticResource PrincBrush}" BorderThickness="0" />
            </StackPanel>
        </Grid>
        <Grid x:Name="TweetPanel" Background="{StaticResource NoStripeBrush}" d:IsHidden="True">
            <StackPanel Margin="12,0" RenderTransformOrigin="0.5,0.5">
                <TextBlock HorizontalAlignment="Left" FontFamily="Segoe WP Light" FontSize="48" Text="Twitter"
                           Margin="12,32,0,-4" Foreground="{StaticResource DarkGreyBrush}" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBox x:Name="TweetTxt" MaxLength="140" KeyUp="EmailTxt_KeyUp" InputScope="Text"
                                 Height="200" Margin="0,-1,0,1" TextWrapping="Wrap" />
                        <TextBlock Margin="0,-12,12,0" FontFamily="Segoe WP Light" FontSize="24"
                                   Foreground="{StaticResource DarkGreyBrush}" HorizontalAlignment="Right">
                            <Run Text="{Binding Text.Length, ElementName=TweetTxt}" FontSize="22" />
                            <Run Text="/140" />
                        </TextBlock>
                    </StackPanel>
                    <Image x:Name="TweetImg" Grid.Column="1" Width="100" Height="100" VerticalAlignment="Top"
                           Margin="0,12,0,0" />
                </Grid>

                <Button Content="{Binding LocalizedResources.SendTweet, Source={StaticResource LocalizedStrings}}"
                        Click="Tweet_Click" Background="{StaticResource PrincBrush}" BorderThickness="0" />
            </StackPanel>
        </Grid>

        <Grid x:Name="LoadingPanel" Visibility="Collapsed" Background="#7F000000">
            <StackPanel VerticalAlignment="Center" >
                <TextBlock Text="Twitter" TextAlignment="Center"/>
                <ProgressBar x:Name="ProgressLoading" Background="Transparent" Foreground="{StaticResource PrincBrush}" />
            </StackPanel>
        </Grid>
    </Grid>
</phone:PhoneApplicationPage>