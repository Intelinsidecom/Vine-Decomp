<phone:PhoneApplicationPage
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:bubbleText="clr-namespace:Huyn.BubbleText"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    xmlns:imageDownload="clr-namespace:Vine.ImageDownload"
    xmlns:controls="clr-namespace:Vine.Controls"
    x:Class="Vine.Pages.Chat.ChatPage"
    SupportedOrientations="Portrait" Orientation="Portrait"
	shell:SystemTray.Opacity="0"
    mc:Ignorable="d"
    shell:SystemTray.IsVisible="True">
    <phone:PhoneApplicationPage.Resources>
        <Style x:Key="OptionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Foreground" Value="{StaticResource PhoneForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="{StaticResource PhoneBorderThickness}"/>
            <Setter Property="FontFamily" Value="{StaticResource PhoneFontFamilyNormal}"/>
            <Setter Property="FontSize" Value="{StaticResource PhoneFontSizeNormal}"/>

            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid x:Name="grid" Background="Transparent">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="MouseOver"/>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(Border.Background)" Storyboard.TargetName="ButtonBackground">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource PrincBrush}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(Control.Foreground)" Storyboard.TargetName="ContentContainer">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="White"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Disabled">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="BorderBrush" Storyboard.TargetName="ButtonBackground">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource PhoneDisabledBrush}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Border x:Name="ButtonBackground" BorderBrush="{TemplateBinding BorderBrush}" CornerRadius="0" >
                                <ContentControl x:Name="ContentContainer" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}" Padding="{TemplateBinding Padding}" VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}" Foreground="{StaticResource DarkGreyBrush}"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </phone:PhoneApplicationPage.Resources>
    <phone:PhoneApplicationPage.FontFamily>
        <StaticResource ResourceKey="PhoneFontFamilyNormal"/>
    </phone:PhoneApplicationPage.FontFamily>
    <phone:PhoneApplicationPage.FontSize>
        <StaticResource ResourceKey="PhoneFontSizeNormal"/>
    </phone:PhoneApplicationPage.FontSize>
    <phone:PhoneApplicationPage.Foreground>
        <StaticResource ResourceKey="PhoneForegroundBrush"/>
    </phone:PhoneApplicationPage.Foreground>
    <shell:SystemTray.ForegroundColor>
        <StaticResource ResourceKey="GreyColor"/>
    </shell:SystemTray.ForegroundColor>
    <phone:PhoneApplicationPage.ApplicationBar>
        <shell:ApplicationBar IsVisible="False" Opacity="0.99">
           <shell:ApplicationBarIconButton Click="PostComment_Click" IconUri="/Assets/AppBar/sendmessage.png" 
        		IsEnabled="False" Text="send comment" />
           
        </shell:ApplicationBar>
    </phone:PhoneApplicationPage.ApplicationBar>

    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot" Background="{StaticResource NoStripeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="{StaticResource ModernAppBarRowHeight}" />
        </Grid.RowDefinitions>

        <Grid x:Name="AdPanel">
        </Grid>
        <!--TitlePanel contains the name of the application and page title-->
        <Grid Grid.Row="1">
            <StackPanel x:Name="ProfileStackPanel" Orientation="Horizontal" Tap="Profile_Tap" Margin="0,32,0,0">

                <TextBlock Text="{Binding Conversation.User.Name, Converter={StaticResource ToUpperConverter}}" Margin="24,0,0,0" Foreground="{StaticResource DarkGreyBrush}"/>
            </StackPanel>
        </Grid>

        <!--ContentPanel - place additional content here-->
        <Grid x:Name="ContentPanel" Grid.Row="2"  >
            <phone:LongListSelector x:Name="Messages" Style="{StaticResource HiddenScrollLongListSelectorStyle}" ItemsSource="{Binding Conversation.Messages}">
                <phone:LongListSelector.ItemTemplate>
                    <DataTemplate>
                        <bubbleText:BubbleText Width="330"  IsMe="{Binding IsMe}" Margin="24,0" Foreground="{StaticResource DarkGreyBrush}" Background="White" Date="{Binding Created}" >

                            <toolkit:ContextMenuService.ContextMenu>
                                <toolkit:ContextMenu IsZoomEnabled="false" Background="White" BorderBrush="Black">
                                    <toolkit:MenuItem Header="{Binding LocalizedResources.Copy, Source={StaticResource LocalizedStrings}}" Click="CopyMessage_Click" />
                                </toolkit:ContextMenu>
                            </toolkit:ContextMenuService.ContextMenu>
                            <StackPanel>
                                <Image Visibility="{Binding ThumbnailUrl,Converter={StaticResource NullableToVisibilityConverter}, FallbackValue=Collapsed}" Height="318" Width="318" Margin="0,0,0,6" imageDownload:ImageDownload.ImageSource="{Binding ThumbnailUrl}" Tap="Video_Tap"/>

                                <TextBlock Text="{Binding Message}"  TextWrapping="Wrap"/>
                            </StackPanel>
                        </bubbleText:BubbleText>
                    </DataTemplate>
                </phone:LongListSelector.ItemTemplate>
                <phone:LongListSelector.ListFooter>
                    <Grid x:Name="Footer" Height="6"/>
                </phone:LongListSelector.ListFooter>

                <phone:LongListSelector.ListHeader>
                    <Grid x:Name="Header" Height="12"/>
                </phone:LongListSelector.ListHeader>
            </phone:LongListSelector>
            <StackPanel Margin="0,24,0,0" Visibility="{Binding Match.Messages.Count, ConverterParameter=inverse, Converter={StaticResource IntVisibilityConverter}, FallbackValue=Collapsed}">
                <TextBlock x:Name="WelcomeMessage" Foreground="{StaticResource DarkGreyBrush}" Margin="48,0" TextWrapping="Wrap" TextAlignment="Center" FontFamily="Segoe WP Light" FontSize="29.333"/>
                <TextBlock Text="{Binding Match.CreatedDate, StringFormat=D}" HorizontalAlignment="Center" Foreground="{StaticResource DarkGreyBrush}" Margin="0,0,0,6" FontSize="13.333"/>
                <Border  Width="280" Height="280" CornerRadius="140" BorderBrush="White" BorderThickness="3" Margin="0,6,0,0">
                    <Border.Background>
                        <ImageBrush ImageSource="{Binding Match.Person.BigImage}" Stretch="UniformToFill" />
                    </Border.Background>
                </Border>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="3" HorizontalAlignment="Right" Width="354"  Margin="0,0,12,6">
            <TextBlock x:Name="MotivateCommentBlock" Foreground="{StaticResource GreyBrush}" FontFamily="Segoe WP Light" FontSize="24" Margin="24,17,12,32" TextWrapping="Wrap"  Visibility="{Binding Text, ConverterParameter=inverse, Converter={StaticResource StringToVisibilityConverter}, ElementName=CommentText}" />
            <TextBox  x:Name="CommentText" InputScope="Text" Margin="0,0,0,12" Background="Transparent" TextWrapping="Wrap" AcceptsReturn="True" Style="{StaticResource CommentTextBoxStyle}"  BorderBrush="{StaticResource GreyBrush}" 
                     TextChanged="CommentText_OnTextChanged" GotFocus="CommentText_OnGotFocus" LostFocus="CommentText_OnLostFocus" />

        </Grid>


        <Grid x:Name="ReportPanel" Grid.RowSpan="3" Grid.Row="1" Background="#33000000" Visibility="Collapsed">
            <Grid Background="White" VerticalAlignment="Center" Margin="48,0">
                <StackPanel Margin="0,12,0,0">
                    <TextBlock Text="{Binding LocalizedResources.Report, Source={StaticResource LocalizedStrings}}" Margin="12,0" Foreground="{StaticResource DarkGreyBrush}" FontSize="48" FontFamily="Segoe WP Light"/>
                    <TextBlock Text="{Binding LocalizedResources.ReportDescription, Source={StaticResource LocalizedStrings}}" Margin="12" Foreground="{StaticResource DarkGreyBrush}" FontSize="21.333" TextWrapping="Wrap"/>
                    <Rectangle Height="1" Fill="{StaticResource LightGreyBrush}" Margin="0,4,0,0"/>
                    <Button Click="ReportClassic_Click" Tag="0" Style="{StaticResource OptionButtonStyle}">
                        <TextBlock Text="{Binding LocalizedResources.ReportSpam, Source={StaticResource LocalizedStrings}}" Margin="0,8" FontSize="24" TextWrapping="Wrap" TextAlignment="Center" FontFamily="Segoe WP SemiLight"/>
                    </Button>
                    <Rectangle Height="1" Fill="{StaticResource LightGreyBrush}" Margin="0"/>
                    <Button Click="ReportClassic_Click" Tag="1"  Style="{StaticResource OptionButtonStyle}">
                        <TextBlock Text="{Binding LocalizedResources.ReportOffensive, Source={StaticResource LocalizedStrings}}" Margin="0,8" FontSize="24" TextWrapping="Wrap" TextAlignment="Center" FontFamily="Segoe WP SemiLight"/>
                    </Button>
                    <Rectangle Height="1" Fill="{StaticResource LightGreyBrush}" Margin="0"/>
                    <Button Click="ReportClassic_Click" Tag="2"  Style="{StaticResource OptionButtonStyle}">
                        <TextBlock Text="{Binding LocalizedResources.ReportUncomfortable, Source={StaticResource LocalizedStrings}}" Margin="0,8" FontSize="24" TextWrapping="Wrap" TextAlignment="Center" FontFamily="Segoe WP SemiLight"/>
                    </Button>
                    <Rectangle Height="1" Fill="{StaticResource LightGreyBrush}" Margin="0"/>
                    <Button Style="{StaticResource OptionButtonStyle}" Click="ReportCustom_Click">
                        <TextBlock Text="{Binding LocalizedResources.ReportOther, Source={StaticResource LocalizedStrings}}" Margin="0,8" FontSize="24" TextWrapping="Wrap" TextAlignment="Center" FontFamily="Segoe WP SemiLight"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>

        <Grid x:Name="WriteReportPanel" Background="#33000000" Grid.Row="1" Grid.RowSpan="4" Visibility="Collapsed">
            <Grid Background="White" VerticalAlignment="Center" Margin="24,-280,24,0">
                <StackPanel Margin="0,12,0,0">
                    <TextBlock Text="{Binding LocalizedResources.Report, Source={StaticResource LocalizedStrings}}" Margin="12,0" Foreground="{StaticResource DarkGreyBrush}" FontSize="48" FontFamily="Segoe WP Light"/>
                    <TextBox x:Name="ReportCustomTextBox" AcceptsReturn="True" TextWrapping="Wrap" Background="#BFF3F3F3" Height="140"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Style="{StaticResource OptionButtonStyle}" Click="ReportCustomSend_Click">
                            <TextBlock Text="{Binding LocalizedResources.Send, Source={StaticResource LocalizedStrings}}" Margin="0,6,0,12" FontSize="24" TextWrapping="Wrap" TextAlignment="Center" FontFamily="Segoe WP SemiLight"/>
                        </Button>
                        <Button Style="{StaticResource OptionButtonStyle}" Grid.Column="1" Click="ReportCustomCancel_Click">
                            <TextBlock Text="{Binding LocalizedResources.Cancel, Source={StaticResource LocalizedStrings}}" Margin="0,6,0,12" FontSize="24" TextWrapping="Wrap" TextAlignment="Center" FontFamily="Segoe WP SemiLight"/>
                        </Button>
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid Grid.RowSpan="5" Visibility="{Binding IsLoading, Converter={StaticResource VisibilityConverter}, FallbackValue=Collapsed}" Background="#7F000000">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock
					Text="{Binding LocalizedResources.Loading, Source={StaticResource LocalizedStrings}}" />
                <ProgressBar Background="Transparent" Foreground="{StaticResource PrincBrush}" IsIndeterminate="{Binding IsLoading}" />
            </StackPanel>
        </Grid>



        <Grid x:Name="ModernAppBarContainer" Grid.RowSpan="5">
            <controls:ModernAppBar x:Name="ModernVineAppBar" >
                <controls:ModernAppBar.Buttons>
                    <controls:ModernAppBarButton Content="&#57622;" Click="PostVideo_Click" Text="{Binding LocalizedResources.SendVine, Source={StaticResource LocalizedStrings}}"/>
                    <controls:ModernAppBarButton Content="&#57814;" Click="Speak_Click" Text="speak"/>
                </controls:ModernAppBar.Buttons>
                <controls:ModernAppBar.MenuItems>
                    <controls:ModernAppBarMenuItem Content="{Binding LocalizedResources.BlockThisPerson, Source={StaticResource LocalizedStrings}}" Click="Block_Click" />
                 </controls:ModernAppBar.MenuItems>
            </controls:ModernAppBar>
        </Grid>

    </Grid>

</phone:PhoneApplicationPage>