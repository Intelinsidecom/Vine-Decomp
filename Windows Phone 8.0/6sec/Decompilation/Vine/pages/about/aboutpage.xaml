<phone:PhoneApplicationPage xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
                            xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
                            xmlns:control="clr-namespace:Vine.Controls" x:Class="Vine.Pages.About.AboutPage" SupportedOrientations="Portrait"
                            Orientation="Portrait" mc:Ignorable="d" shell:SystemTray.IsVisible="True" shell:SystemTray.Opacity="0"
                            shell:SystemTray.ForegroundColor="#FF808080">
    <phone:PhoneApplicationPage.Resources>
        <DataTemplate x:Key="HeaderDataTemplate">
            <TextBlock Text="{Binding}" Foreground="{StaticResource DarkGreyBrush}" FontFamily="Segoe WP SemiLight"
                       FontSize="34" />
        </DataTemplate>
        <Style x:Key="HeaderTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32" />
            <Setter Property="Foreground" Value="Black" />
        </Style>
        <Style x:Key="ChangelogTextBlockStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource DarkGreyBrush}" />
            <Setter Property="Margin" Value="1,0,0,0" />
        </Style>
    </phone:PhoneApplicationPage.Resources>
    <phone:PhoneApplicationPage.FontFamily>
        <StaticResource ResourceKey="PhoneFontFamilyNormal" />
    </phone:PhoneApplicationPage.FontFamily>
    <phone:PhoneApplicationPage.FontSize>
        <StaticResource ResourceKey="PhoneFontSizeNormal" />
    </phone:PhoneApplicationPage.FontSize>
    <phone:PhoneApplicationPage.Foreground>
        <StaticResource ResourceKey="PhoneForegroundBrush" />
    </phone:PhoneApplicationPage.Foreground>
    <Grid>
        <Grid x:Name="LayoutRoot" Background="{StaticResource NoStripeBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Height="80" Background="{StaticResource ModernHeaderBrush}">
                <Grid Margin="24,24,0,0">
                    <ContentControl HorizontalAlignment="Left" Height="25"  Style="{StaticResource LogoStyle}" Width="32"/>
                    <TextBlock Text="{Binding LocalizedResources.TitleAbout, Source={StaticResource LocalizedStrings}}"
                               FontFamily="Segoe WP Semibold" FontSize="26.667" Margin="40,0,0,0" Foreground="{StaticResource ModernForegroundBrush}" VerticalAlignment="Center"
                               HorizontalAlignment="Left" />
                </Grid>
            </Grid>

            <!--     <phone:Pivot Grid.Row="1" HeaderTemplate="{StaticResource HeaderDataTemplate}">
                <phone:PivotItem
                    Header="{Binding LocalizedResources.General, Source={StaticResource LocalizedStrings}}">
              -->
            <ScrollViewer Grid.Row="1">
                <StackPanel Margin="0,12,0,0" >
                <TextBlock FontSize="24" Foreground="{StaticResource DarkGreyBrush}" Margin="12,0,0,0">
                            <Run Text="{Binding LocalizedResources.AppVersion, Source={StaticResource LocalizedStrings}}" />
                            <Run FontFamily="Segoe WP Light" FontSize="30" x:Name="VersionNumber" />
                </TextBlock>
                <TextBlock Margin="12,12,0,0" Foreground="{StaticResource DarkGreyBrush}">
                            <Run Text="{Binding LocalizedResources.AppBy, Source={StaticResource LocalizedStrings}}" />
                            <Run Text="Rudy Huyn" FontFamily="Segoe WP Light" FontSize="30" />
                </TextBlock>
                <TextBlock Margin="12,0,0,0" Foreground="{StaticResource DarkGreyBrush}">
                            <Run Text="{Binding LocalizedResources.AboutTwitter, Source={StaticResource LocalizedStrings}}" />
                            <Run Text="@rudyhuyn" FontFamily="Segoe WP Light" />
                </TextBlock>
                <Button
                        	Content="FAQ"
                        	Background="{StaticResource PrincBrush}" BorderThickness="0" Margin="0,12,0,0" Click="FAQ_Click" Foreground="White"/>
                <Button Content="{Binding LocalizedResources.Changelog, Source={StaticResource LocalizedStrings}}"
                        	Background="{StaticResource PrincBrush}" BorderThickness="0" Margin="0,6,0,0" Click="Changelog_Click" Foreground="White"/>
                <Button
                            Content="{Binding LocalizedResources.ReportBugsSuggestions, Source={StaticResource LocalizedStrings}}"
                            Background="{StaticResource GreyBrush}" Foreground="{StaticResource DarkGreyBrush}" BorderThickness="0" Margin="0,6,0,0" Click="UserVoice_Click" />
                <Button Content="{Binding LocalizedResources.Email, Source={StaticResource LocalizedStrings}}"
                                Background="{StaticResource GreyBrush}" BorderThickness="0" Margin="0,6,0,0" Click="Mail_Click"
                                Foreground="{StaticResource DarkGreyBrush}" />
                <Button
                            Content="{Binding LocalizedResources.OtherAppBy, Source={StaticResource LocalizedStrings}}"
                            Background="{StaticResource GreyBrush}" Foreground="{StaticResource DarkGreyBrush}" BorderThickness="0"
                            Margin="0,6,0,0" Click="OtherApp_Click" />
                <Button x:Name="AppChallengeButton" Visibility="Collapsed"
                	Content="AppChallenge"
                	Background="{StaticResource GreyBrush}" Foreground="{StaticResource DarkGreyBrush}" BorderThickness="0" Margin="0,6,0,0" Click="AppChallenge_Click" />


                    <TextBlock Tap="OpenPrivacyPolicy_Tap" Text="{Binding LocalizedResources.PolicyPrivacy, Source={StaticResource LocalizedStrings}}" Foreground="{StaticResource DarkGreyBrush}" Margin="12,12,12,0" TextDecorations="Underline" HorizontalAlignment="Right" />
        
            </StackPanel>
            </ScrollViewer>
