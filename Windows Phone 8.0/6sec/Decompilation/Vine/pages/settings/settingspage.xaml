<phone:PhoneApplicationPage xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
                            xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
                            xmlns:control="clr-namespace:Vine.Controls" x:Class="Vine.Pages.Settings.SettingsPage" SupportedOrientations="Portrait"
                            Orientation="Portrait" mc:Ignorable="d" shell:SystemTray.IsVisible="True" shell:SystemTray.Opacity="0"
                            shell:SystemTray.ForegroundColor="#FF808080">
    <phone:PhoneApplicationPage.Resources>
        <ControlTemplate x:Key="SixListPicker" TargetType="toolkit:ListPicker">
            <StackPanel>
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup x:Name="PickerStates">
                        <VisualState x:Name="Normal"/>
                        <VisualState x:Name="Highlighted">
                            <Storyboard>
                                <ObjectAnimationUsingKeyFrames
        							Storyboard.TargetName="UserControl"
        							Storyboard.TargetProperty="Foreground"
        							Duration="0">
                                    <DiscreteObjectKeyFrame
        								Value="Black"
        								KeyTime="0"/>
                                </ObjectAnimationUsingKeyFrames>

                            </Storyboard>
                        </VisualState>
                        <VisualState x:Name="Disabled">
                            <Storyboard>
                                <ObjectAnimationUsingKeyFrames
        							Storyboard.TargetName="Border"
        							Storyboard.TargetProperty="Background"
        							Duration="0">
                                    <DiscreteObjectKeyFrame
        								Value="{StaticResource TransparentBrush}"
        								KeyTime="0"/>
                                </ObjectAnimationUsingKeyFrames>
                                <ObjectAnimationUsingKeyFrames
        							Storyboard.TargetName="Border"
        							Storyboard.TargetProperty="BorderBrush"
        							Duration="0">
                                    <DiscreteObjectKeyFrame
        								Value="{StaticResource PhoneDisabledBrush}"
        								KeyTime="0"/>
                                </ObjectAnimationUsingKeyFrames>
                                <ObjectAnimationUsingKeyFrames
        							Storyboard.TargetName="UserControl"
        							Storyboard.TargetProperty="Foreground"
        							Duration="0">
                                    <DiscreteObjectKeyFrame
        								Value="{StaticResource PhoneDisabledBrush}"
        								KeyTime="0"/>
                                </ObjectAnimationUsingKeyFrames>
                            </Storyboard>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>
                <ContentControl
        			Content="{TemplateBinding Header}"
        			ContentTemplate="{TemplateBinding HeaderTemplate}"
        			Foreground="Black"
        			FontSize="{StaticResource PhoneFontSizeNormal}"
        			HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
        			Margin="0 0 0 8"/>
                <Grid>
                    <Border x:Name="Border"
        				Background="White"
        				BorderBrush="Black"
        				BorderThickness="2">
                        <UserControl x:Name="UserControl" Foreground="{TemplateBinding Foreground}">
                            <StackPanel>
                                <TextBlock x:Name="MultipleSelectionModeSummary" Margin="8 8 0 8" />
                                <Canvas x:Name="ItemsPresenterHost" MinHeight="46">
                                    <ItemsPresenter x:Name="ItemsPresenter">
                                        <ItemsPresenter.RenderTransform>
                                            <TranslateTransform x:Name="ItemsPresenterTranslateTransform"/>
                                        </ItemsPresenter.RenderTransform>
                                    </ItemsPresenter>
                                </Canvas>
                            </StackPanel>
                        </UserControl>
                    </Border>
                </Grid>
            </StackPanel>
        </ControlTemplate>
        <Style  TargetType="toolkit:ListPickerItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="8 10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="toolkit:ListPickerItem">
                        <Grid Background="{TemplateBinding Background}">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="SelectionStates">
                                    <VisualState x:Name="Unselected"/>
                                    <VisualState x:Name="Selected">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Duration="0" Storyboard.TargetProperty="Foreground" Storyboard.TargetName="ContentContainer">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource PhoneAccentBrush}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <ContentControl x:Name="ContentContainer" Foreground="Black" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="HeaderDataTemplate">
            <TextBlock Text="{Binding}" Foreground="{StaticResource DarkGreyBrush}" FontFamily="Segoe WP SemiLight"
                       FontSize="34" />
        </DataTemplate>
    </phone:PhoneApplicationPage.Resources>
    <phone:PhoneApplicationPage.FontFamily>
        <StaticResource ResourceKey="PhoneFontFamilyNormal" />
    </phone:PhoneApplicationPage.FontFamily>
    <phone:PhoneApplicationPage.FontSize>
        <StaticResource ResourceKey="PhoneFontSizeNormal" />
    </phone:PhoneApplicationPage.FontSize>
    <phone:PhoneApplicationPage.Foreground>
        <StaticResource ResourceKey="PhoneForegroundBrush" />
    </phone:PhoneApplicationPage.Foreground>
    <Grid>
        <Grid x:Name="BrowserPanel" Height="1" Width="1" />
        <Grid x:Name="LayoutRoot" Background="{StaticResource NoStripeBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Height="80" Background="{StaticResource ModernHeaderBrush}">
                <Grid Margin="24,24,0,0">
                    <ContentControl HorizontalAlignment="Left" Height="25"  Style="{StaticResource LogoStyle}" Width="32"/>
                    <TextBlock
                        Text="{Binding LocalizedResources.TitleSettings, Source={StaticResource LocalizedStrings}}"
                        FontFamily="Segoe WP Semibold" FontSize="26.667" Margin="40,0,0,0" Foreground="{StaticResource ModernForegroundBrush}" VerticalAlignment="Center"
                        HorizontalAlignment="Left" />
                </Grid>
            </Grid>

            <phone:Pivot Grid.Row="1" HeaderTemplate="{StaticResource HeaderDataTemplate}">
                <phone:PivotItem
                    Header="{Binding LocalizedResources.MyProfile,Source={StaticResource LocalizedStrings}}">
                    <Grid>
                        <StackPanel
                            Visibility="{Binding IsProfileLoading, Converter={StaticResource VisibilityConverter}}" HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                            <TextBlock
                                Text="{Binding LocalizedResources.LoadingProfile, Source={StaticResource LocalizedStrings}}"
                                FontFamily="Segoe WP Light" Foreground="{StaticResource DarkGreyBrush}" />
                            <ProgressBar IsIndeterminate="True" Background="#00000000"
                                         Foreground="{StaticResource PrincBrush}" Margin="-12,0" />
                        </StackPanel>
                        <ScrollViewer
                            Visibility="{Binding IsProfileLoading, ConverterParameter=inverse, Converter={StaticResource VisibilityConverter}}">
                            <Grid x:Name="ContentPanel1">

                                <StackPanel Margin="0,0,0,0">
                                    <Button Style="{StaticResource SimpleButtonStyle}" Click="ChangeAvatar_Click"
                                            HorizontalAlignment="Center" Margin="12,0,12,24">
                                        <Border Height="150" Width="150" Background="White"
                                                HorizontalAlignment="Center" Margin="0">
                                            <Grid>
                                                <Image x:Name="Picture" Source="{Binding Profile.Picture}" Margin="6" />

                                                <Path Data="M0,0 L10,0 L10,10" Fill="White" HorizontalAlignment="Right"
                                                      Height="50" Margin="0" Stretch="Fill" UseLayoutRounding="False" VerticalAlignment="Top" Width="50" />
                                                <Path Stretch="Fill"
                                                      Data="F1M2.848,20.882C3.241,20.786,3.327,20.472,3.041,20.188L1.286,18.438C1,18.154,0.686,18.242,0.59,18.632L0.022,20.92C-0.076,21.314,0.164,21.554,0.557,21.456z M20.502,1C18.551,-0.95 16.627,0.554 16.627,0.554 16.307,0.8 15.819,1.233 15.537,1.511 15.256,1.792 15.262,2.255 15.545,2.541L18.963,5.959C19.248,6.245 19.711,6.249 19.993,5.968 20.274,5.687 20.705,5.196 20.953,4.878 20.953,4.878 22.457,2.957 20.502,1 M6.891,19.066C6.608,19.352,6.139,19.352,5.856,19.066L2.436,15.648C2.151,15.362,2.151,14.898,2.436,14.61L13.369,3.682C13.653,3.398,14.119,3.398,14.405,3.682L17.819,7.101C18.106,7.388,18.106,7.855,17.819,8.138z"
                                                      Fill="{StaticResource DarkGreyBrush}" Margin="0,4,4,0" UseLayoutRounding="False" HorizontalAlignment="Right"
                                                      VerticalAlignment="Top" Width="20" Height="20" />
                                            </Grid>
                                        </Border>
                                    </Button>

                                    <TextBlock
                                        Text="{Binding LocalizedResources.Username, Source={StaticResource LocalizedStrings}}"
                                        Foreground="{StaticResource DarkGreyBrush}" Margin="12,0,12,-12" />
                                    <control:AlterTextBox Text="{Binding Profile.Name}" FontFamily="Segoe WP Bold"
                                                          Foreground="Black" FontSize="28" TextAlignment="Center" Margin="0" Modified="Name_Modified" />
                                    <TextBlock
                                        Text="{Binding LocalizedResources.Description, Source={StaticResource LocalizedStrings}}"
                                        Foreground="{StaticResource DarkGreyBrush}" Margin="12,0,12,-12" />

                                    <control:AlterTextBox Text="{Binding Profile.Description}"
                                                          FontFamily="Segoe WP SemiLight" Foreground="Black" FontSize="20" TextWrapping="Wrap" Margin="0,2"
                                                          TextAlignment="Center" Height="110" Modified="Description_Modified" />
                                    <TextBlock
                                        Text="{Binding LocalizedResources.Location, Source={StaticResource LocalizedStrings}}"
                                        Foreground="{StaticResource DarkGreyBrush}" Margin="12,0,12,-12" />
                                    <control:AlterTextBox Text="{Binding Profile.Location}"
                                                          FontFamily="Segoe WP SemiLight" Foreground="Black" FontSize="20" TextWrapping="Wrap" Margin="0,6"
                                                          TextAlignment="Center" Modified="Location_Modified" />
                                    <Button
                                        Content="{Binding LocalizedResources.Logout, Source={StaticResource LocalizedStrings}}" Background="#FFD2D2D2"
                                        BorderThickness="0" FontSize="29.333" Click="Logout_Click" Foreground="#FF6B6B6B" Margin="0,12,0,0" />


                                </StackPanel>

                            </Grid>
                        </ScrollViewer>
                    </Grid>
                </phone:PivotItem>
                <phone:PivotItem
                    Header="{Binding LocalizedResources.Information,Source={StaticResource LocalizedStrings}}">
                    <Grid>
                        <StackPanel
                            Visibility="{Binding IsProfileLoading, Converter={StaticResource VisibilityConverter}}" HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                            <TextBlock
                                Text="{Binding LocalizedResources.LoadingProfile, Source={StaticResource LocalizedStrings}}"
                                FontFamily="Segoe WP Light" Foreground="{StaticResource DarkGreyBrush}" />
                            <ProgressBar IsIndeterminate="True" Background="#00000000"
                                         Foreground="{StaticResource PrincBrush}" Margin="-12,0" />

                        </StackPanel>

                        <ScrollViewer
                            Visibility="{Binding IsProfileLoading, ConverterParameter=inverse, Converter={StaticResource VisibilityConverter}}">
                            <Grid x:Name="ContentPanel2">

                                <StackPanel Margin="0,0,0,0">

                                    <TextBlock
                                        Text="{Binding LocalizedResources.Email, Source={StaticResource LocalizedStrings}}"
                                        Foreground="{StaticResource DarkGreyBrush}" Margin="12,0,12,-12" />
                                    <control:AlterTextBox Text="{Binding Profile.Email}" InputScope="EmailNameOrAddress"
                                                          Foreground="Black" Margin="0" Modified="Email_Modified" />
                                    <TextBlock
                                        Text="{Binding LocalizedResources.PhoneNumber, Source={StaticResource LocalizedStrings}}"
                                        Foreground="{StaticResource DarkGreyBrush}" Margin="12,0,12,-12" />
                                    <control:AlterTextBox Text="{Binding Profile.PhoneNumber}" InputScope="TelephoneNumber"
                                                          Foreground="Black" Margin="0" Modified="Phone_Modified" />
                                    <Button x:Name="SyncTwitterButton" Background="#FFD2D2D2" BorderThickness="0"
                                            Content="{Binding LocalizedResources.SynchronizeWithTwitter, Source={StaticResource LocalizedStrings}}"
                                            FontSize="29.333" Click="SyncTwitter_Click" Foreground="#FF6B6B6B" Margin="0,24,0,0" />
                                    <Button x:Name="DisconnectTwitterButton" Background="#FFD2D2D2" BorderThickness="0"
                                            Content="{Binding LocalizedResources.DisconnectTwitter, Source={StaticResource LocalizedStrings}}" FontSize="29.333"
                                            Click="DisconnectTwitter_Click" Foreground="#FF6B6B6B" Margin="0,24,0,0" />
                                    <Button x:Name="SyncFaceButton" Background="#FFD2D2D2" BorderThickness="0"
                                            Content="{Binding LocalizedResources.SynchronizeWithFacebook, Source={StaticResource LocalizedStrings}}"
                                            FontSize="29.333" Click="SyncFacebook_Click" Foreground="#FF6B6B6B" Margin="0,24,0,0" />
                                    <Button x:Name="DisconnectFacebookButton" Background="#FFD2D2D2"
                                            BorderThickness="0" Content="{Binding LocalizedResources.DisconnectFacebook, Source={StaticResource LocalizedStrings}}"
                                            FontSize="29.333" Click="DisconnectFacebook_Click" Foreground="#FF6B6B6B" Margin="0,24,0,0" />
                                    <Button x:Name="ResetPasswordButton" Background="#FFD2D2D2" BorderThickness="0"
                                            Content="{Binding LocalizedResources.ResetYourPassword, Source={StaticResource LocalizedStrings}}" FontSize="29.333"
                                            Click="ResetPassword_Click" Foreground="#FF6B6B6B" Margin="0,24,12,0" />
                                </StackPanel>

                                <Button
                                    Content="{Binding LocalizedResources.YourContent, Source={StaticResource LocalizedStrings}}"
                                    Foreground="{StaticResource DarkerBrush}" Margin="0,0,12,0" VerticalAlignment="Bottom" BorderThickness="0"
                                    FontSize="26.667" FontFamily="Segoe WP SemiLight" Background="#7FFFFFFF" Click="YourContent_Click" />

                            </Grid>
                        </ScrollViewer>
                    </Grid>
                </phone:PivotItem>
                <phone:PivotItem Header="{Binding LocalizedResources.AppDesign, Source={StaticResource LocalizedStrings}}">
                    <ScrollViewer>
                        <StackPanel>
                            <TextBlock Text="{Binding LocalizedResources.Colors, Source={StaticResource LocalizedStrings}}" Margin="12,0,0,-6" Foreground="{StaticResource DarkGreyBrush}" />
                            <toolkit:ListPicker x:Name="ListPickerModernColor" SelectionChanged="ModernColor_SelectionChanged" Template="{StaticResource SixListPicker}">
                                <toolkit:ListPickerItem Content="{Binding LocalizedResources.ThemeLight, Source={StaticResource LocalizedStrings}}" />
                                <toolkit:ListPickerItem Content="{Binding LocalizedResources.ThemeBlackAndWhite, Source={StaticResource LocalizedStrings}}"/>
                                <toolkit:ListPickerItem Content="{Binding LocalizedResources.ThemeDark, Source={StaticResource LocalizedStrings}}"/>
                            </toolkit:ListPicker>
                            <CheckBox x:Name="UseFullScreenCheckBox" IsChecked="{Binding Data.UseFullScreenPost, Mode=TwoWay}">
                                <TextBlock
                				Text="{Binding LocalizedResources.FullScreenPosts, Source={StaticResource LocalizedStrings}}" 
                				 TextWrapping="Wrap" />
                            </CheckBox>
                            
                            <CheckBox IsChecked="{Binding Data.RemoveStripes, Mode=TwoWay}"
                            	Click="RemoveStripe_Click">
                                <TextBlock
                            	Text="{Binding LocalizedResources.RemoveStripes, Source={StaticResource LocalizedStrings}}"
                            	TextWrapping="Wrap" />
                            </CheckBox>
                            <CheckBox IsChecked="{Binding Data.UseMyAccentColourForLiveTile, Mode=TwoWay}" Click="ChangeTileColor_Click">
                                <TextBlock
                            		Text="{Binding LocalizedResources.UseMyAccentColourForLiveTile, Source={StaticResource LocalizedStrings}}"  
                            		TextWrapping="Wrap" />
                            </CheckBox>

                        </StackPanel>
                    </ScrollViewer>
                </phone:PivotItem>
                <phone:PivotItem Header="{Binding LocalizedResources.LiveTile, Source={StaticResource LocalizedStrings}}">
                    <ScrollViewer>
                        <StackPanel>
                            <TextBlock
                				Text="{Binding LocalizedResources.BackgroundAgentMessage, Source={StaticResource LocalizedStrings}}" Margin="12,24,0,0"
                				Foreground="Gray" TextWrapping="Wrap" FontSize="24" FontFamily="Segoe WP Light" />
                            <CheckBox x:Name="AgentCheckBox" Click="Agent_Click" Margin="0,6,0,0">
                                <TextBlock
                				Text="{Binding LocalizedResources.BackgroundAgentActivate, Source={StaticResource LocalizedStrings}}"
                				Foreground="Gray" />
                            </CheckBox>
                        </StackPanel>
                    </ScrollViewer>
                </phone:PivotItem>
                <phone:PivotItem Header="{Binding LocalizedResources.General,Source={StaticResource LocalizedStrings}}">
                    <ScrollViewer>
                        <StackPanel>
                            <CheckBox IsChecked="{Binding Profile.IncludePromoted}"
                                                  Click="IncludePromoted_Click">
                                <TextBlock
                                Text="{Binding LocalizedResources.FollowEditorPicks, Source={StaticResource LocalizedStrings}}" 
                                TextWrapping="Wrap"  />

                            </CheckBox>
                            <CheckBox IsChecked="{Binding Data.AutoPlay, Mode=TwoWay}">
                                <TextBlock
                                Text="{Binding LocalizedResources.AutoPlayVideos, Source={StaticResource LocalizedStrings}}" 
                                TextWrapping="Wrap" />
                            </CheckBox>
                            <CheckBox IsChecked="{Binding Data.DisableDoubleTap, Mode=TwoWay}">
                                <TextBlock
                            	Text="{Binding LocalizedResources.DisableDoubleTapToLike, Source={StaticResource LocalizedStrings}}"
                            	TextWrapping="Wrap" />
                            </CheckBox>
                        
                            <Button x:Name="AdButton" Content="{Binding LocalizedResources.RemoveAds, Source={StaticResource LocalizedStrings}}" BorderThickness="0" Background="{StaticResource GreyBrush}" Foreground="{StaticResource DarkGreyBrush}" Click="RemoveAds_Click" />
                            <Button Content="{Binding LocalizedResources.EmptyInternetCache, Source={StaticResource LocalizedStrings}}" BorderThickness="0" Background="{StaticResource GreyBrush}" Foreground="{StaticResource DarkGreyBrush}" Click="EmptyInternetCache_Click" />
                        </StackPanel>
                    </ScrollViewer>
                </phone:PivotItem>
                <phone:PivotItem
                    Header="{Binding LocalizedResources.FindFriends, Source={StaticResource LocalizedStrings}}">
                    <StackPanel>
                        <TextBlock
                            Text="{Binding LocalizedResources.FindFriendsMessage,Source={StaticResource LocalizedStrings}}" TextWrapping="Wrap"
                            Foreground="{StaticResource DarkGreyBrush}" FontSize="26.667" FontFamily="Segoe WP Light" Margin="12,0" />
                        <Button
                            Content="{Binding LocalizedResources.FindFriendsPhone,Source={StaticResource LocalizedStrings}}" Background="#FFD2D2D2"
                            BorderThickness="0" Click="SearchContactPhone_Click" FontSize="29.333" Foreground="#FF6B6B6B" Margin="0,48,12,0" />
                        <Button
                            Content="{Binding LocalizedResources.FindFriendsTwitter,Source={StaticResource LocalizedStrings}}"
                            x:Name="TwitterButton" Background="#FFD2D2D2" BorderThickness="0" Click="SearchContactTwitter_Click" FontSize="29.333"
                            Foreground="#FF6B6B6B" Margin="0,24,12,0" />
                        <Button
                            Content="{Binding LocalizedResources.FindFriendsVine,Source={StaticResource LocalizedStrings}}" Background="#FFD2D2D2"
                            BorderThickness="0" FontSize="29.333" Click="VineSearch_Click" Foreground="#FF6B6B6B" Margin="0,24,12,0" />
                    </StackPanel>
                </phone:PivotItem>
            </phone:Pivot>

            <Rectangle Grid.Row="1" IsHitTestVisible="False" Fill="#14000000" Height="5" VerticalAlignment="Top" />
        </Grid>
        <Grid x:Name="YourContentPanel" Background="{StaticResource NoStripeBrush}" Visibility="Collapsed">
            <StackPanel Margin="12,72,12,12">
                <TextBlock Text="{Binding LocalizedResources.YourContent, Source={StaticResource LocalizedStrings}}"
                           Foreground="{StaticResource DarkerBrush}" FontFamily="Segoe WP Light" FontSize="39" Margin="12,0,0,48" />
                <TextBlock Text="{Binding LocalizedResources.PostAreProtected, Source={StaticResource LocalizedStrings}}"
                           Margin="12,0,0,0" Foreground="{StaticResource DarkGreyBrush}" FontSize="24" />
                <CheckBox x:Name="ProtectedCheck" IsChecked="{Binding Profile.Private}"
                                       Click="Protected_Click" >
                    <TextBlock
                    Text="{Binding LocalizedResources.PostAreProtectedDescription, Source={StaticResource LocalizedStrings}}"
                    Foreground="{StaticResource DarkGreyBrush}" TextWrapping="Wrap" />

                </CheckBox>
                <TextBlock
                    Text="{Binding LocalizedResources.SensitivePosts, Source={StaticResource LocalizedStrings}}" Margin="12,24,0,0"
                    Foreground="{StaticResource DarkGreyBrush}" TextWrapping="Wrap" FontSize="24" />
                <CheckBox x:Name="SensitiveCheck" IsChecked="{Binding Profile.ExplicitContent}" Click="Sensitive_Click">
                    <TextBlock
                    Text="{Binding LocalizedResources.SensitivePostsDescription, Source={StaticResource LocalizedStrings}}"
                   Foreground="{StaticResource DarkGreyBrush}" FontSize="20" />
                </CheckBox>

            </StackPanel>
        </Grid>
        <Grid x:Name="LoadingPanel" Visibility="Collapsed" Background="#7F000000">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="{Binding LocalizedResources.Loading, Source={StaticResource LocalizedStrings}}" />
                <ProgressBar x:Name="ProgressLoading" Background="Transparent" Foreground="{StaticResource PrincBrush}" IsIndeterminate="False" />
            </StackPanel>
        </Grid>


    </Grid>


</phone:PhoneApplicationPage>