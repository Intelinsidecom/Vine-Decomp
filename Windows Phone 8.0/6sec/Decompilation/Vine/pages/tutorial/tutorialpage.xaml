            <Grid x:Name="LegendPanel" Grid.Row="1">

                <TextBlock x:Name="textBlock0" HorizontalAlignment="Center" Margin="0,124,0,0"
                	TextWrapping="Wrap" VerticalAlignment="Top" Foreground="{StaticResource DarkerBrush}" FontSize="22" Opacity="0"
                	 />

                <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="24,265,0,0" Width="130" TextAlignment="Center" TextWrapping="Wrap"
                       Text="{Binding LocalizedResources.ILike, Source={StaticResource LocalizedStrings}}" VerticalAlignment="Top"
                       Foreground="{StaticResource DarkerBrush}" FontSize="22" Opacity="0" />
                <TextBlock x:Name="textBlock1" HorizontalAlignment="Center" Margin="0,265,0,0" Width="130" TextAlignment="Center" 
                       TextWrapping="Wrap" Text="{Binding LocalizedResources.Share, Source={StaticResource LocalizedStrings}}"
                       VerticalAlignment="Top" Foreground="{StaticResource DarkerBrush}" FontSize="22" Opacity="0" />

                <TextBlock x:Name="textBlock2" HorizontalAlignment="Right" Margin="0,265,24,0" Width="130" TextAlignment="Center" 
                       TextWrapping="Wrap" Text="{Binding LocalizedResources.Comment, Source={StaticResource LocalizedStrings}}"
                       VerticalAlignment="Top" Foreground="{StaticResource DarkerBrush}" FontSize="22" Opacity="0" />
                <TextBlock x:Name="textBlock3" HorizontalAlignment="Center" Margin="0,395,0,0"
                       TextWrapping="Wrap" VerticalAlignment="Top" Foreground="{StaticResource DarkerBrush}" FontSize="22" Opacity="0"
                       Text="revine" />
            </Grid>
            <Button x:Name="button" Click="Next_Click"
                    Content="{Binding LocalizedResources.LetsGo, Source={StaticResource LocalizedStrings}}"
                    Background="{StaticResource PrincBrush}" Grid.Row="2" BorderThickness="0" Margin="12,0,12,12" Opacity="0" />
            <!--TitlePanel contains the name of the application and page title-->

            <!--ContentPanel - place additional content here-->
        </Grid>
        <Border x:Name="border" Background="{StaticResource PrincBrush}" VerticalAlignment="Top" HorizontalAlignment="Left"
                Margin="12,140,0,0" RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <CompositeTransform TranslateX="-800" />
            </Border.RenderTransform>
            <TextBlock Text="{Binding LocalizedResources.TutoMessage1, Source={StaticResource LocalizedStrings}}"
                       FontSize="34.667" Margin="3" FontFamily="Segoe WP SemiLight" />
        </Border>
        <Border x:Name="border1" Background="{StaticResource PrincBrush}" VerticalAlignment="Top" HorizontalAlignment="Left"
                Margin="12,230,0,0" RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <CompositeTransform TranslateX="-800" />
            </Border.RenderTransform>
            <TextBlock Text="{Binding LocalizedResources.TutoMessage2, Source={StaticResource LocalizedStrings}}"
                       FontSize="34.667" Margin="3" FontFamily="Segoe WP SemiLight" />
        </Border>
    </Grid>
</phone:PhoneApplicationPage>