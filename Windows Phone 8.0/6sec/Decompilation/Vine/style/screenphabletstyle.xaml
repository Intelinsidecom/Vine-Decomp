<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:controls="clr-namespace:Vine.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../ButtonResourceDictionary.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    <sys:Double x:Key="ModernAppBarHeight">48</sys:Double>
    <sys:String x:Key="ModernAppBarRowHeight">48</sys:String>


    <sys:Double x:Key="ModernAppBarMiniHeight">26</sys:Double>
    <sys:String x:Key="ModernAppBarMiniRowHeight">26</sys:String>

    <Thickness x:Key="ModernAppPaddingForHomeAppBar">3.5,0,3.5,0</Thickness>

    <sys:Double x:Key="CameraModernAppBarButtonFontSize">30</sys:Double>
    <Thickness x:Key="CameraModernAppBarButtonPadding">0,1,0,-1</Thickness>

    <sys:Double x:Key="ModernAppBarButtonLabelFontSize">11</sys:Double>
    <sys:Double x:Key="ModernAppBarButtonLabelMaxSize">24</sys:Double>
    

    <Style x:Key="ModernAppBarMenuItemStyle" TargetType="Button" BasedOn="{StaticResource BaseModernAppBarMenuItemStyle}">
        <Setter Property="FontSize" Value="23"/>
        <Setter Property="Padding" Value="12,4,12,4"/>

    </Style>
    <Style x:Key="ModernAppBarButtonStyle" TargetType="controls:ModernAppBarButton" BasedOn="{StaticResource BaseModernAppBarButtonStyle}">
        <Setter Property="FontSize" Value="26"/>
    </Style>

</ResourceDictionary>