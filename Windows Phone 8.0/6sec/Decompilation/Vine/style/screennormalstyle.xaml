<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:controls="clr-namespace:Vine.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../ButtonResourceDictionary.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <sys:Double x:Key="ModernAppBarHeight">64</sys:Double>
    <sys:String x:Key="ModernAppBarRowHeight">64</sys:String>

    <sys:Double x:Key="ModernAppBarMiniHeight">32</sys:Double>
    <sys:String x:Key="ModernAppBarMiniRowHeight">32</sys:String>

    <Thickness x:Key="ModernAppPaddingForHomeAppBar">0,0,0,0</Thickness>
    <sys:Double x:Key="CameraModernAppBarButtonFontSize">39</sys:Double>
    <Thickness x:Key="CameraModernAppBarButtonPadding">0,1.5,0,-1.5</Thickness>

    <sys:Double x:Key="ModernAppBarButtonLabelFontSize">12</sys:Double>
    <sys:Double x:Key="ModernAppBarButtonLabelMaxSize">32</sys:Double>

    <Style x:Key="ModernAppBarMenuItemStyle" TargetType="Button" BasedOn="{StaticResource BaseModernAppBarMenuItemStyle}">
    </Style>
    <Style x:Key="ModernAppBarButtonStyle" TargetType="controls:ModernAppBarButton" BasedOn="{StaticResource BaseModernAppBarButtonStyle}">
    </Style>
</ResourceDictionary>