<UserControl x:Class="Vine.RateAppControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
	<UserControl.Resources>
		<Storyboard x:Name="StoryboardStart" BeginTime="00:00:00.50">
			<DoubleAnimation Duration="0:0:0.6" To="0" Storyboard.TargetProperty="(UIElement.Projection).(PlaneProjection.RotationX)" Storyboard.TargetName="grid" d:IsOptimized="True">
				<DoubleAnimation.EasingFunction>
					<CircleEase EasingMode="EaseOut"/>
				</DoubleAnimation.EasingFunction>
			</DoubleAnimation>
		</Storyboard>
	</UserControl.Resources>
 <Grid Background="#7F000000">
	   <Grid x:Name="grid" VerticalAlignment="Top">
	   	<Grid.Projection>
	   		<PlaneProjection RotationX="-90"/>
	   	</Grid.Projection>
    	<Grid.Background>
    		<SolidColorBrush Color="#FF1F1F1F"/>
    	</Grid.Background>
    <StackPanel x:Name="LayoutRoot" Margin="24,36,24,6">
	<TextBlock x:Name="Title" FontSize="29.333" FontFamily="Segoe WP Light"/>
	<TextBlock Text="{Binding LocalizedResources.RatingMessage, Source={StaticResource LocalizedStrings}}" TextWrapping="Wrap" Margin="0,12,0,0"/>
	<Grid Margin="-12,12,-12,0">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
                    <Button  Background="{StaticResource PrincBrush}" Click="Yes_Click">
                        <TextBlock Text="{Binding LocalizedResources.RatingYes, Source={StaticResource LocalizedStrings}}" TextWrapping="Wrap"/>
                    </Button>
                    <Button Grid.Column="1" Click="Later_Click">
                        <TextBlock Text="{Binding LocalizedResources.RatingLater, Source={StaticResource LocalizedStrings}}" TextWrapping="Wrap"/>
                    </Button>
                </Grid>
	<Button Margin="-24,0" BorderThickness="0" FontSize="16" HorizontalAlignment="Left" FontFamily="Segoe WP SemiLight" Padding="10,0" Click="No_Click">
		<TextBlock TextDecorations="Underline" Text="{Binding LocalizedResources.RatingNo, Source={StaticResource LocalizedStrings}}" Opacity="0.5" />
		</Button>
    </StackPanel>
	</Grid>
	</Grid>
</UserControl>