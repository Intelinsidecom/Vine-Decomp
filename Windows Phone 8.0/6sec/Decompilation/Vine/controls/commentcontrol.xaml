<UserControl x:Class="Vine.Controls.CommentControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="112" d:DesignWidth="147">

    <Grid Background="Transparent" Margin="24,6,12,6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Border x:Name="AvatarBorder"  Background="{StaticResource BackgroundImageBrush}" Tap="Profile_Tap" VerticalAlignment="Top"
    			Height="50" Width="50" Margin="0,6,12,6">
            <Border.Clip>
                <EllipseGeometry RadiusX="25" RadiusY="25" Center="25,25"/>
            </Border.Clip>
            <Image x:Name="Avatar" Stretch="UniformToFill" />
        </Border>
        <TextBlock x:Name="Date" Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,0,0"
                               FontFamily="Segoe WP Light" Foreground="{StaticResource DarkGreyBrush}" FontSize="18.667" />

        <StackPanel Margin="0,0,0,6" Grid.Column="1">

            <TextBlock x:Name="NameTxt" Tap="Profile_Tap" Foreground="{StaticResource PrincBrush}"
                                   FontSize="22" TextWrapping="Wrap" />
            <RichTextBox x:Name="CommentTxt" Foreground="{StaticResource ThemeTextBrush}" Margin="-12,0,12,0"  FontSize="20"
                                     FontFamily="Segoe WP SemiLight" TextWrapping="Wrap" />

            <!-- <TextBlock FontSize="18" TextWrapping="Wrap">
    				<Run Foreground="{StaticResource PrincBrush}" FontWeight="Bold" Text="{Binding Username}" />
    				<Run Text="{Binding Comment}"  />
    			</TextBlock>-->
        </StackPanel>


    </Grid>

</UserControl>