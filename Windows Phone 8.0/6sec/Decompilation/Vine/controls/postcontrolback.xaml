<UserControl
    x:Class="Vine.Controls.PostControlBack"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
>
    <Grid x:Name="BackPanel">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="452" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid Background="{StaticResource PostBackgroundBrush}" Grid.Column="1">
            <Grid x:Name="ContentPanel" VerticalAlignment="Center" HorizontalAlignment="Center"  Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border x:Name="Option2" Visibility="Collapsed" Tap="Option2_Tap" Background="Transparent" UseLayoutRounding="False" Width="70" Height="70"
                		Margin="32" Grid.Column="1" >
                    <TextBlock FontFamily="{StaticResource SegoeMDL2Font}" 
					Text="&#57604;" Foreground="{StaticResource BackCommandBrush}" FontSize="60" HorizontalAlignment="Center"/>
                </Border>
                <Border x:Name="Option2Bis" Visibility="Collapsed" Tap="Option2Bis_Tap" Background="Transparent" UseLayoutRounding="False" Width="70" Height="70"
                		Margin="32" Grid.Column="1" >
                    <TextBlock x:Name="Option2BisTextBlock" FontFamily="{StaticResource SegoeMDL2Font}" 
					Text="&#57802;" Foreground="{StaticResource BackCommandBrush}" FontSize="60" HorizontalAlignment="Center"/>
                </Border>
                <Grid Background="Transparent" x:Name="BackLike" Tap="Liked_Tap" HorizontalAlignment="Left"
                		VerticalAlignment="Center" Width="70" Height="70" Margin="32" Grid.Row="1">
                    <Path x:Name="LikedPath" FlowDirection="LeftToRight" Stretch="Uniform" Margin="0,0,0,10"
                			Data="{StaticResource ActionLikePath}" Stroke="{StaticResource BackCommandBrush}"
                			StrokeThickness="4" UseLayoutRounding="False" />
                    <ProgressBar x:Name="LikedProgress" Foreground="{StaticResource PrincBrush}" Margin="0"
                			Background="Transparent" VerticalAlignment="Center" />
                </Grid>
                <Border Tap="Share_Tap" Background="Transparent" UseLayoutRounding="False" Width="70" Height="70"
                		Margin="32" Grid.Column="1" Grid.Row="1">
                    <TextBlock FontFamily="{StaticResource SegoeMDL2Font}" 
					Text="&#59181;" Foreground="{StaticResource BackCommandBrush}" FontSize="60" HorizontalAlignment="Center"/>
                </Border>
                <Border Tap="BackComment_Tap" Background="Transparent" UseLayoutRounding="False"
                		HorizontalAlignment="Right" Height="70" Width="70" Margin="32" Grid.Column="2" Grid.Row="1">
                    <TextBlock FontFamily="{StaticResource SegoeMDL2Font}" 
					Text="&#57695;" Foreground="{StaticResource BackCommandBrush}" FontSize="60" HorizontalAlignment="Center"/>
                </Border>
                <Grid Background="Transparent" Tap="Option_Tap" HorizontalAlignment="Center"
                		VerticalAlignment="Center" Width="70" Height="70" Margin="32" Grid.Column="1" Grid.Row="2">
                    <TextBlock FontFamily="{StaticResource SegoeMDL2Font}" 
					Text="&#57624;" Foreground="{StaticResource BackCommandBrush}" FontSize="60" HorizontalAlignment="Center"
				Margin="3,0,0,0"	/>
                    <ProgressBar x:Name="RevineProgress" Foreground="{StaticResource PrincBrush}" Margin="0"
                			Background="Transparent" VerticalAlignment="Center" />
                </Grid>
            </Grid>
            <Button x:Name="RemovePanel" Visibility="Collapsed" Style="{StaticResource SimpleButtonStyle}"
                        VerticalAlignment="Bottom" Click="Remove_Click" HorizontalAlignment="Center" Margin="0,0,0,6">
                <TextBlock
                        Text="{Binding LocalizedResources.RemoveMyPost, Source={StaticResource LocalizedStrings}}" FontSize="18"
                        FontFamily="Segoe WP SemiLight" Foreground="{StaticResource DarkGreyBrush}" />
            </Button>
            <Button x:Name="BackShowMenuButton" VerticalAlignment="Bottom" Margin="-12,-6,0,-12" Click="BackTurnPost_Click" HorizontalAlignment="Right" Style="{StaticResource SimpleButtonStyle}" >
                <Border Background="Transparent" >
                    <TextBlock Text="..." FontFamily="Segoe WP SemiBold" FontSize="34" Foreground="{StaticResource DarkGreyBrush}" Margin="12,6,12,12" />
                </Border>
            </Button>
        </Grid>
        <Rectangle x:Name="ShadowB1" Visibility="Collapsed" Grid.Row="1" Height="5" Fill="{StaticResource ShadowBrush}" Grid.ColumnSpan="2" Margin="0,0,5,0" />
        <Rectangle x:Name="ShadowB2" Visibility="Collapsed" Fill="{StaticResource ShadowBrush}" Width="5" Grid.Column="0" Margin="0,5,0,0" />
    </Grid>

</UserControl>