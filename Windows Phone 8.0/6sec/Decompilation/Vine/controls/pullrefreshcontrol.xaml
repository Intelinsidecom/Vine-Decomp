<UserControl x:Class="Vine.Controls.PullRefreshControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    <UserControl.Resources>
        <Storyboard x:Name="StoryboardExternal" FillBehavior="Stop">
            <DoubleAnimation Duration="0:0:2.6" To="1440" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.Rotation)" Storyboard.TargetName="ExternalCircle" d:IsOptimized="True">
                <DoubleAnimation.EasingFunction>
                    <BackEase Amplitude="0.4" EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="ExternalCircle">
                <EasingColorKeyFrame KeyTime="0:0:0.3" Value="{StaticResource GreenColor}"/>
                <EasingColorKeyFrame KeyTime="0:0:2.3" Value="{StaticResource GreenColor}"/>
                <EasingColorKeyFrame KeyTime="0:0:2.6" Value="#FFD2D2D2"/>
            </ColorAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Name="StoryboardInternal" FillBehavior="Stop">
            <DoubleAnimation Duration="0:0:2.7" To="1080" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.Rotation)" Storyboard.TargetName="InternalCircle" d:IsOptimized="True">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="InternalCircle">
                <EasingColorKeyFrame KeyTime="0:0:1.2" Value="{StaticResource GreenColor}"/>
                <EasingColorKeyFrame KeyTime="0:0:2.3" Value="{StaticResource GreenColor}"/>
                <EasingColorKeyFrame KeyTime="0:0:2.7" Value="#FFD2D2D2"/>
            </ColorAnimationUsingKeyFrames>
        </Storyboard>
    </UserControl.Resources>

