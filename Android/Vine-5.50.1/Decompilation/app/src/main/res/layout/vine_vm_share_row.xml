<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:vine="http://schemas.android.com/apk/res-auto"
    android:id="@+id/share_with_a_friend_container"
    android:background="@color/solid_white"
    android:layout_width="match_parent"
    android:layout_height="@dimen/share_row_height">
    <co.vine.android.widget.TypefacesTextView
        android:textSize="14sp"
        android:textColor="@color/black_thirty_five_percent"
        android:gravity="center_vertical"
        android:id="@+id/share_with_a_friend_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:text="@string/share_with_a_friend"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        vine:textWeight="2"
        vine:textStyle="0"/>
    <ImageView
        android:id="@+id/share_with_a_friend_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_share_search"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>
