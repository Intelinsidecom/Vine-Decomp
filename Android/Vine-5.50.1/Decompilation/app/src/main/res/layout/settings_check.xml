<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/solid_white"
    android:layout_width="match_parent"
    android:layout_height="@dimen/settings_row_height"
    style="@style/SettingsItemParent">
    <TextView
        android:textStyle="bold"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        style="@style/ReportSettingsLabel"/>
    <View
        android:id="@+id/selection_indicator"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="@dimen/standard_spacing"
        android:src="@drawable/selection_indicator"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>
