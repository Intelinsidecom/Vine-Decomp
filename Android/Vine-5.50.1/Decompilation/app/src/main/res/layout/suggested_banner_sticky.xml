<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/suggested_sticky_header"
    android:background="@color/soft_white"
    android:visibility="invisible"
    android:layout_width="match_parent"
    android:layout_height="206dp"
    android:minHeight="56dp">
    <RelativeLayout
        android:id="@+id/for_you_text"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">
        <co.vine.android.widget.TypefacesTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="@dimen/spacing_smaller_micro"
            style="@style/SuggestedPostsTitle"/>
        <co.vine.android.widget.TypefacesTextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_alignParentLeft="true"
            android:lineSpacingExtra="@dimen/suggested_banner_line_spacing"
            style="@style/SuggestedPostsDescription"/>
    </RelativeLayout>
    <include
        android:background="@color/solid_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/suggested_banner_sticky_bottom_margin"
        android:layout_toLeftOf="@+id/close_button"
        android:layout_alignParentBottom="true"
        layout="@layout/suggested_thumbnails_sticky"/>
    <ImageView
        android:id="@+id/close_button"
        android:padding="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/white_x_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
