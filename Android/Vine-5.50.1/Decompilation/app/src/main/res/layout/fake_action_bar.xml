<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fake_action_bar_height">
    <View
        android:orientation="horizontal"
        android:id="@+id/distance_marker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/fake_action_bar"
        android:background="@color/solid_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/fake_action_bar_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">
            <ImageView
                android:id="@+id/ab_back_button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:scaleType="center"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/ab_home_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ab_back_button"
                android:layout_centerVertical="true"/>
            <View
                android:id="@+id/spacer"
                android:visibility="gone"
                android:layout_width="@dimen/activity_horizontal_margin"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/ab_home_button"/>
            <co.vine.android.widget.TypefacesTextView
                android:gravity="center"
                android:id="@+id/ab_title_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/spacer"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/fake_action_bar_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ab_overflow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
