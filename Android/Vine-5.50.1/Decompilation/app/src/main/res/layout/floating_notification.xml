<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:vine="http://schemas.android.com/apk/res-auto"
    android:id="@+id/floating_notification"
    android:padding="0dp"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:layout_margin="0dp">
    <co.vine.android.widget.TypefacesTextView
        android:textSize="13sp"
        android:textColor="@color/solid_white"
        android:gravity="center"
        android:id="@+id/floating_view"
        android:padding="0dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="0dp"
        vine:textWeight="4"/>
</RelativeLayout>
