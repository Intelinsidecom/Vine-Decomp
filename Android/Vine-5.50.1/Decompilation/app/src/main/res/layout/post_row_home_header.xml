<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_content_container"
    android:paddingLeft="9dp"
    android:paddingTop="2dp"
    android:paddingRight="13dp"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/avatar_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/user_image"
            android:clickable="false"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="3dp"
            android:src="@drawable/circle_shape_light"
            android:scaleType="centerCrop"/>
        <RelativeLayout
            android:id="@+id/avatar_follow_container"
            android:layout_width="40dp"
            android:layout_height="32dp"
            android:layout_alignLeft="@+id/user_image"
            android:layout_alignBottom="@+id/user_image"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="14dp"
                android:layout_marginRight="-2dp"
                android:layout_marginBottom="-2dp"
                android:src="@drawable/circle_shape_white"/>
            <co.vine.android.widget.VineToggleButton
                android:id="@+id/follow_button"
                android:background="@drawable/btn_avatar_follow"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:textOn=""
                android:textOff=""
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/loops_container"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_alignTop="@+id/username"
        android:layout_alignBottom="@+id/username"
        android:layout_alignParentRight="true">
        <ImageView
            android:id="@+id/fire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:src="@drawable/ic_feed_hot"/>
        <co.vine.android.widget.CounterView
            android:id="@+id/loopCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <co.vine.android.widget.TypefacesTextView
            android:textSize="13sp"
            android:id="@+id/loops_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:singleLine="true"/>
    </LinearLayout>
    <co.vine.android.widget.TypefacesTextView
        android:ellipsize="end"
        android:gravity="left"
        android:id="@+id/username"
        android:paddingLeft="@dimen/post_header_padding_small"
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4.25dp"
        android:maxEms="10"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/loops_container"
        android:layout_toRightOf="@+id/avatar_block"
        style="@style/TimelineUsername"/>
    <co.vine.android.widget.TypefacesTextView
        android:gravity="left"
        android:id="@+id/loops_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loops"
        android:singleLine="true"
        android:layout_below="@+id/username"
        android:layout_alignParentRight="true"
        style="@style/TimelineTimestamp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/loops_label"
        android:layout_toRightOf="@+id/avatar_block"
        android:layout_below="@+id/username"
        android:layout_alignTop="@+id/loops_label"
        android:layout_alignBottom="@+id/loops_label">
        <co.vine.android.widget.TypefacesTextView
            android:id="@+id/timestamp"
            android:paddingLeft="@dimen/post_header_padding_small"
            android:paddingRight="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:drawablePadding="6dp"
            style="@style/TimelineTimestamp"/>
    </LinearLayout>
</RelativeLayout>
