<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:vine="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/toggle_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="12dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>
    <co.vine.android.widget.TypefacesTextView
        android:textSize="14sp"
        android:textColor="@color/black_thirty_five_percent"
        android:id="@+id/toggle_label"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        vine:textWeight="3"
        vine:textStyle="0"/>
    <co.vine.android.widget.VineToggleButton
        android:id="@+id/toggle_button"
        android:background="@drawable/btn_share_toggle"
        android:duplicateParentState="true"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="8dp"
        android:checked="false"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        style="@style/VineToggleButton"/>
</merge>
