<?xml version="1.0" encoding="utf-8"?>
<co.vine.android.widget.RecorderDragSortWidget xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/thumbnail_list"
    android:background="@color/solid_black"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/videoViewContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/progress_view_height">
        <ImageView
            android:id="@+id/thumbnail_overlay"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:id="@+id/preview_loading_overlay"
            android:background="@color/preview_translucent_black"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <co.vine.android.views.SdkProgressBar
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:indeterminate="true"
                android:layout_centerInParent="true"
                style="?android:attr/progressBarStyleLarge"/>
        </RelativeLayout>
        <RelativeLayout
            android:gravity="center"
            android:id="@+id/play_button_container"
            android:background="@android:color/transparent"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/play_button"
                android:duplicateParentState="true"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/btn_import_play"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/play_button_clip"
                android:duplicateParentState="true"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/btn_play_clip"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <VideoView
        android:id="@+id/cameraView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:id="@+id/finish_loading_overlay"
        android:background="@color/preview_translucent_black"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <co.vine.android.views.SdkProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminate="true"
            android:layout_centerInParent="true"
            style="?android:attr/progressBarStyleLarge"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/focus_indicator"
        android:visibility="invisible"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/focus_indicator"/>
    <View
        android:background="@color/solid_black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/capture_top_mask"/>
    <co.vine.android.views.OnMeasureNotifyingRelativeLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/editor_buttons"/>
        <RelativeLayout
            android:id="@+id/top_mask"
            android:layout_width="match_parent"
            android:layout_height="@dimen/capture_top_mask">
            <co.vine.android.recorder.RegularProgressView
                android:id="@+id/progress"
                android:background="@color/bg_capture_progress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/progress_view_height"/>
            <View
                android:id="@+id/progress_overlay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/progress_view_height"/>
            <LinearLayout
                android:gravity="center"
                android:id="@+id/cancel"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:onClick="onRecorderBackPressed">
                <Button
                    android:id="@+id/capture_x"
                    android:background="@drawable/ic_x_large"
                    android:layout_width="@dimen/record_options_button_size"
                    android:layout_height="@dimen/record_options_button_size"
                    android:onClick="onRecorderBackPressed"/>
            </LinearLayout>
            <co.vine.android.widget.TypefacesTextView
                android:id="@+id/recipient_label"
                android:paddingBottom="1dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-13dp"
                android:text="@string/message"
                android:layout_toRightOf="@+id/cancel"
                android:layout_centerVertical="true"
                style="@style/MessagesNameTitle"/>
            <LinearLayout
                android:gravity="center"
                android:id="@+id/finish_button"
                android:visibility="gone"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">
                <Button
                    android:id="@+id/finish_arrow"
                    android:background="@drawable/ic_arrow_large"
                    android:layout_width="@dimen/record_options_button_size"
                    android:layout_height="@dimen/record_options_button_size"
                    android:onClick="onFinishPressed"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/bottom_mask"
            android:background="@color/capture_background"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true">
            <ImageView
                android:gravity="left"
                android:id="@+id/sony_button"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/cam_cap_mode_sample_icn"
                android:layout_below="@+id/recording_options"
                android:alpha="0.5"/>
            <co.vine.android.widget.ToolDrawerLinearLayout
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:id="@+id/recording_sub_options"
                android:background="@color/tool_drawer_bg"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/recording_options">
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:id="@+id/recording_sub_options_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </co.vine.android.widget.ToolDrawerLinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/recording_options"
                android:layout_width="match_parent"
                android:layout_height="@dimen/record_options_height"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/above_bottom_mask_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottom_mask"/>
    </co.vine.android.views.OnMeasureNotifyingRelativeLayout>
    <co.vine.android.views.RecorderHorizontalListView
        android:id="@android:id/list"
        android:background="@android:color/black"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/editor_thumbnail_size"
        android:layout_marginTop="@dimen/editor_segment_padding"
        android:layout_marginBottom="@dimen/editor_segment_padding"/>
</co.vine.android.widget.RecorderDragSortWidget>
