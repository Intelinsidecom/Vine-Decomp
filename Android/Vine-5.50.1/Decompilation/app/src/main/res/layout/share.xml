<?xml version="1.0" encoding="utf-8"?>
<co.vine.android.share.screens.ShareScreen xmlns:android="http://schemas.android.com/apk/res/android" xmlns:vine="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/comment_container_container"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/comment_container"
        android:background="@color/solid_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <co.vine.android.share.widgets.VineCommentRow
            android:id="@+id/add_a_comment"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/share_row_height"
            vine:commentIconSrc="@drawable/ic_share_comment"
            vine:commentIconColorFilterColor="@color/vine_green"
            vine:commentIconColorFilterEmptyColor="@color/black_thirty_five_percent"
            vine:emptyCommentLabelText="@string/add_a_message"
            vine:emptyCommentLabelTextColor="@color/black_thirty_five_percent"
            vine:commentLabelTextColor="@android:color/black"/>
        <View
            android:background="@color/black_five_percent"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/vm_and_channel_container"
        android:background="@color/solid_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/vine_vm_share_row"/>
        <co.vine.android.share.widgets.VineRecipientSelectionIndicatorRow
            android:orientation="horizontal"
            android:id="@+id/vm_recipients_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/share_row_height"
            vine:queryEnabled="false"
            vine:collapseRecipientsAfterX="2"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/channel_picker_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:background="@color/solid_super_light_gray"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <co.vine.android.share.widgets.ChannelPickerRow
                android:id="@+id/channel_picker"
                android:background="@color/solid_white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/share_row_height"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/virtual_main_content"
        android:background="@color/solid_white"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <View
            android:background="@color/solid_super_light_gray"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <View
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="8dp"/>
        <RelativeLayout
            android:id="@+id/undo_revine_row"
            android:background="@color/solid_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/share_row_height">
            <ImageView
                android:id="@+id/undo_revine_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/ic_share_vine"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>
            <co.vine.android.widget.TypefacesTextView
                android:textSize="14sp"
                android:textColor="@color/solid_black"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="56dp"
                android:text="@string/revine_list_option"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                vine:textWeight="3"
                vine:textStyle="0"/>
            <Button
                android:textSize="14sp"
                android:textColor="@color/black_thirty_five_percent"
                android:id="@+id/undo_revine"
                android:background="@drawable/bg_cancel"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:text="@string/undo"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <co.vine.android.share.widgets.VineToggleRow
            android:id="@+id/vine_toggle_row"
            android:background="@color/solid_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/share_row_height"
            vine:toggleIconSrc="@drawable/ic_share_vine"
            vine:toggleLabelText="@string/vine"
            vine:toggleLabelTextColor="@color/solid_black"
            vine:toggleLabelSelectedTextColor="@color/vine_green"
            vine:toggleButtonColor="@color/vine_green"/>
        <co.vine.android.share.widgets.VineToggleRow
            android:id="@+id/twitter_toggle_row"
            android:background="@color/solid_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/share_row_height"
            vine:toggleIconSrc="@drawable/ic_share_twitter"
            vine:toggleLabelText="@string/twitter"
            vine:toggleLabelTextColor="@color/solid_black"
            vine:toggleLabelSelectedTextColor="@color/twitter_blue"
            vine:toggleLabelDisabledTextColor="@color/share_target_toggle_disabled"
            vine:toggleButtonColor="@color/twitter_blue"
            vine:toggleButtonDisabledColor="@color/share_target_toggle_disabled"/>
        <co.vine.android.share.widgets.VineToggleRow
            android:id="@+id/facebook_toggle_row"
            android:background="@color/solid_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/share_row_height"
            vine:toggleIconSrc="@drawable/ic_share_facebook"
            vine:toggleLabelText="@string/facebook"
            vine:toggleLabelTextColor="@color/solid_black"
            vine:toggleLabelSelectedTextColor="@color/facebook_blue"
            vine:toggleLabelDisabledTextColor="@color/share_target_toggle_disabled"
            vine:toggleButtonColor="@color/facebook_blue"
            vine:toggleButtonDisabledColor="@color/share_target_toggle_disabled"/>
        <co.vine.android.share.widgets.VineToggleRow
            android:id="@+id/tumblr_toggle_row"
            android:background="@color/solid_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/share_row_height"
            vine:toggleIconSrc="@drawable/ic_share_tumblr"
            vine:toggleLabelText="@string/tumblr"
            vine:toggleLabelTextColor="@color/solid_black"
            vine:toggleLabelSelectedTextColor="@color/tumblr_navy"
            vine:toggleLabelDisabledTextColor="@color/share_target_toggle_disabled"
            vine:toggleButtonColor="@color/tumblr_navy"
            vine:toggleButtonDisabledColor="@color/share_target_toggle_disabled"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp">
            <co.vine.android.widget.StartButton
                android:textSize="16sp"
                android:textStyle="normal"
                android:textColor="@color/solid_white"
                android:id="@+id/finish"
                android:background="@drawable/bg_revine"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"/>
        </FrameLayout>
    </LinearLayout>
</co.vine.android.share.screens.ShareScreen>
