<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp">
    <RelativeLayout
        android:id="@+id/playlist_header"
        android:background="@color/solid_super_light_gray"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/playlist_header_text_size"
            android:textStyle="bold"
            android:id="@+id/suggestions_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/playlist_header_margin_left"
            android:layout_marginTop="@dimen/playlist_header_margin_top"
            android:layout_marginBottom="@dimen/playlist_header_margin_bottom"
            android:text="@string/playlist"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/playlist_header_margin_top"
            android:src="@drawable/playlist"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</FrameLayout>
