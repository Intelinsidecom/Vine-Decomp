<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/thumbnails"
    android:layout_width="@dimen/suggested_banner_sticky_thumbnails_width"
    android:layout_height="@dimen/suggested_banner_sticky_thumbnail_height"
    android:minWidth="@dimen/suggested_banner_sticky_thumbnails_width_minimum"
    android:minHeight="@dimen/suggested_banner_sticky_thumbnail_height_minimum">
    <ImageView
        android:id="@+id/thumbnail_zero"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:layout_weight="2"/>
    <ImageView
        android:id="@+id/thumbnail_one"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_weight="1"/>
    <ImageView
        android:id="@+id/thumbnail_two"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_weight="1"/>
    <ImageView
        android:id="@+id/thumbnail_three"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_weight="1"/>
    <ImageView
        android:id="@+id/thumbnail_four"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_weight="1"/>
</LinearLayout>
