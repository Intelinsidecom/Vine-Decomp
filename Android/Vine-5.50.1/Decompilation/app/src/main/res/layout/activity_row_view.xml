<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:vine="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/spacer_extra"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>
    <include
        android:id="@+id/header"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_header_height"
        android:layout_below="@+id/spacer_extra"
        layout="@layout/activity_header"/>
    <View
        android:id="@+id/spacer_top"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_padding_top"
        android:layout_below="@+id/header"/>
    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_padding"
        android:layout_below="@+id/spacer_top">
        <RelativeLayout
            android:id="@+id/avatar_container"
            android:layout_width="42dp"
            android:layout_height="@dimen/user_image_size"
            android:layout_marginLeft="@dimen/activity_padding"
            android:layout_marginRight="@dimen/activity_padding"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true">
            <ImageView
                android:id="@+id/user_image"
                android:layout_width="@dimen/user_image_size"
                android:layout_height="@dimen/user_image_size"/>
            <ImageView
                android:id="@+id/activity_type_icon"
                android:layout_width="@dimen/activity_type_icon_size"
                android:layout_height="@dimen/activity_type_icon_size"
                android:layout_marginBottom="-2dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <co.vine.android.widget.RoundedCornerBitmapImageView
            android:id="@+id/thumbnail"
            android:background="@android:color/transparent"
            android:layout_width="@dimen/activity_thumb_size"
            android:layout_height="@dimen/activity_thumb_size"
            android:layout_marginRight="@dimen/activity_padding"
            android:layout_alignParentRight="true"
            vine:cornerRadius="4dp"/>
        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <View
                android:id="@+id/follow"
                android:background="@drawable/bg_user_row_follow"
                android:visibility="gone"
                android:layout_width="36dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"/>
        </FrameLayout>
        <RelativeLayout
            android:gravity="top"
            android:orientation="vertical"
            android:id="@+id/text_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginRight="@dimen/activity_padding"
            android:layout_toLeftOf="@+id/thumbnail"
            android:layout_toRightOf="@+id/avatar_container"
            android:layout_alignParentTop="true">
            <RelativeLayout
                android:orientation="horizontal"
                android:id="@+id/username_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <co.vine.android.widget.TypefacesTextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    style="@style/ActivityUsername"/>
                <ImageView
                    android:id="@+id/verified"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_vine_verified"
                    android:layout_toRightOf="@+id/username"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <co.vine.android.widget.TypefacesTextView
                android:id="@+id/twitterScreenname"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="16dp"
                android:layout_below="@+id/username_container"
                style="@style/ActivityTwitterScreenname"/>
            <co.vine.android.widget.TypefacesTextView
                android:id="@+id/content_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/twitterScreenname"
                style="@style/ActivityContent"/>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:id="@+id/spacer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_padding"
        android:layout_below="@+id/content"/>
</RelativeLayout>
