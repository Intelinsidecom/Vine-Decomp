<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:visibility="gone"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="48dp">
    <ImageView
        android:id="@+id/nib_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:src="@drawable/nib_up_black"/>
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_corner_rect_5_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_twitter_icon_white"/>
        <co.vine.android.widget.TypefacesTextView
            android:textColor="@color/solid_white"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="12dp"
            android:text="@string/twitter_tooltip"
            textWeight="3"/>
    </LinearLayout>
</LinearLayout>
