<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <co.vine.android.widget.TypefacesEditText
        android:id="@+id/login_username"
        android:layout_marginBottom="11dp"
        android:hint="@string/login_xauth_username_hint"
        android:inputType="textEmailAddress"
        android:imeOptions="actionNext"
        style="@style/EditText.SignIn.Twitter"/>
    <co.vine.android.widget.TypefacesEditText
        android:id="@+id/login_password"
        android:layout_marginBottom="20dp"
        android:hint="@string/login_password"
        android:layout_below="@+id/login_username"
        android:inputType="textPassword"
        style="@style/EditText.SignIn.Twitter"/>
    <co.vine.android.widget.TypefacesTextView
        android:id="@+id/tos_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sign_up_tos_line_1"
        android:layout_below="@+id/login_password"
        style="@style/SignupTOS"/>
    <co.vine.android.widget.TypefacesTextView
        android:id="@+id/tos_line_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/tos_line"
        style="@style/SignupTOS"/>
</RelativeLayout>
