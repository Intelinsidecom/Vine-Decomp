<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/solid_black"/>
    <ImageSwitcher
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/solid_black"
            android:scaleType="centerCrop"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/solid_black"
            android:scaleType="centerCrop"/>
    </ImageSwitcher>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/solid_black"
        android:alpha="0.8"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/post_viewer_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="23dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true">
        <co.vine.android.widget.ColorizedCircleButton
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="46dp"
            android:src="@drawable/button_like_theater"/>
        <co.vine.android.widget.ColorizedCircleButton
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="46dp"
            android:src="@drawable/button_comment_theater"/>
        <co.vine.android.widget.ColorizedCircleButton
            android:id="@+id/share_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="46dp"
            android:src="@drawable/button_share_theater"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/playback_linear"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/post_viewer_actions">
        <RelativeLayout
            android:id="@+id/top_content_container"
            android:paddingLeft="16dp"
            android:paddingTop="10dp"
            android:paddingRight="8dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="44dp">
            <co.vine.android.widget.TypefacesTextView
                android:ellipsize="end"
                android:id="@+id/top_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="-2dp"
                android:singleLine="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                style="@style/TheaterTitle"/>
            <co.vine.android.widget.ColorizedCircleButton
                android:id="@+id/more_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dotdotdot"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <FrameLayout
            android:id="@+id/video_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <android.support.v4.view.ViewPager
                android:orientation="vertical"
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <co.vine.android.widget.FloatingLikesView
                android:id="@+id/floating_likes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                custom:animationMaxWidth="100dp"
                custom:animationHeight="100dp"
                custom:animationDurationMS="1000"
                custom:iconWidth="75dp"
                custom:drawable="@drawable/double_tap"/>
        </FrameLayout>
        <RelativeLayout
            android:id="@+id/post_info_container"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <co.vine.android.views.SdkProgressBar
                android:id="@+id/spinner"
                android:visibility="invisible"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="10dp"
                android:indeterminateDrawable="@drawable/theater_looping"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"/>
            <LinearLayout
                android:orientation="vertical"
                android:descendantFocusability="blocksDescendants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/spinner"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true">
                <co.vine.android.widget.TypefacesTextView
                    android:id="@+id/caption"
                    android:scrollbars="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:maxLines="3"
                    android:lineSpacingExtra="1dp"
                    style="@style/TheaterCaption"/>
                <co.vine.android.widget.TypefacesTextView
                    android:ellipsize="end"
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    style="@style/TheaterUsername"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
