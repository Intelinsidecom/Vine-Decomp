<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:vine="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:background="@drawable/bg_user_row"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="54dp">
    <co.vine.android.widget.VineToggleButton
        android:id="@+id/user_row_btn_follow"
        android:background="@drawable/btn_share_toggle"
        android:duplicateParentState="true"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="@dimen/standard_spacing"
        android:layout_marginRight="12dp"
        android:checked="false"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        vine:toggleColor="@color/twitter_blue"
        style="@style/VineToggleButton"/>
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/user_row_btn_follow"
        android:layout_centerVertical="true"
        layout="@layout/user_row_base"/>
</RelativeLayout>
