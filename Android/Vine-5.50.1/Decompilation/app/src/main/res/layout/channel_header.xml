<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:vine="http://schemas.android.com/apk/res-auto"
    android:padding="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp">
    <RelativeLayout
        android:gravity="center"
        android:id="@+id/channel_content_outer"
        android:background="@color/bg_profile_header"
        android:paddingLeft="@dimen/standard_spacing"
        android:paddingRight="@dimen/standard_spacing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v4.view.ViewPager
            android:id="@+id/header_pager"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
        <FrameLayout
            android:id="@+id/dots_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_dots_height"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/header_pager">
            <co.vine.android.widget.DotIndicators
                android:layout_gravity="top|center_horizontal"
                android:id="@+id/dots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                vine:onIcon="@drawable/profile_pagination"
                vine:offAlpha="50"
                vine:dotPadding="@dimen/dot_spacing"/>
        </FrameLayout>
        <RelativeLayout
            android:id="@+id/channel_actions_container"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="16dp"
            android:layout_below="@+id/dots_container"
            android:layout_centerHorizontal="true">
            <Button
                android:gravity="center"
                android:id="@+id/measuring_button"
                android:background="@drawable/profile_button_background"
                android:paddingLeft="21dp"
                android:paddingRight="21dp"
                android:visibility="gone"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="@string/profile_settings"
                android:drawablePadding="5dp"
                style="@style/ProfileButtonText"/>
            <RelativeLayout
                android:id="@+id/left_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:gravity="center"
                    android:id="@+id/channel_follow"
                    android:background="@drawable/profile_button"
                    android:paddingLeft="21dp"
                    android:paddingRight="21dp"
                    android:visibility="gone"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:text="@string/profile_follow"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    style="@style/ProfileButtonText"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/right_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/left_button">
                <Button
                    android:gravity="center"
                    android:id="@+id/watch_button"
                    android:background="@drawable/profile_button_background"
                    android:paddingLeft="21dp"
                    android:paddingRight="21dp"
                    android:visibility="gone"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:text="@string/profile_watch"
                    android:drawableLeft="@drawable/ic_watch_theater"
                    android:drawablePadding="5dp"
                    android:layout_alignParentBottom="true"
                    style="@style/ProfileButtonText"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/channel_tabs"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_below="@+id/channel_content_outer">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/popular_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
                <co.vine.android.widget.TypefacesTextView
                    android:textSize="@dimen/font_size_medium"
                    android:id="@+id/popular_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_title_popular"
                    style="@style/TabButton2"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_gravity="bottom"
            android:background="@drawable/rule_vertical_6"
            android:layout_width="2dp"
            android:layout_height="48dp"/>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:id="@+id/recent_parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <co.vine.android.widget.TypefacesTextView
                android:textSize="@dimen/font_size_medium"
                android:id="@+id/recent_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_title_recent"
                style="@style/TabButton2"/>
        </LinearLayout>
        <View
            android:layout_gravity="bottom"
            android:id="@+id/second_vertical_divider"
            android:background="@drawable/rule_vertical_6"
            android:visibility="gone"
            android:layout_width="2dp"
            android:layout_height="48dp"/>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:id="@+id/for_you_parent"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <co.vine.android.widget.TypefacesTextView
                android:textSize="@dimen/font_size_medium"
                android:id="@+id/for_you_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_title_for_you"
                style="@style/TabButton2"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/solid_super_light_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/double_standard_spacing"
        android:layout_below="@+id/channel_tabs"/>
</RelativeLayout>
