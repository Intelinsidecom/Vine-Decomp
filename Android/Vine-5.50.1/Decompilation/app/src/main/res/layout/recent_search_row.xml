<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:vine="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/root_layout"
    android:background="@drawable/bg_generic"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/spacing_large">
    <TextView
        android:id="@+id/header_label"
        android:background="@drawable/bg_black_five_percent"
        android:paddingLeft="11dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_header_height"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_recent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <co.vine.android.widget.TypefacesTextView
            android:textSize="@dimen/font_size_large"
            android:gravity="center"
            android:id="@+id/query"
            android:paddingLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_toRightOf="@+id/icon"
            android:layout_centerVertical="true"
            vine:textWeight="3"/>
        <ImageView
            android:id="@+id/clear"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginRight="13dp"
            android:src="@drawable/ic_smallx"
            android:scaleType="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
