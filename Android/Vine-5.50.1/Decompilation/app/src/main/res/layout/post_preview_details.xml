<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:vine="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/preview_details_container"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp">
    <co.vine.android.widget.PopupEditText
        android:textSize="14sp"
        android:textColor="@color/solid_white"
        android:textColorHint="@color/white_fifty_percent"
        android:gravity="top|left"
        android:id="@+id/preview_text"
        android:background="@android:color/transparent"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/share_caption_text"
        android:lineSpacingMultiplier="1.3"
        android:inputType="textCapSentences"
        android:imeOptions="actionDone"
        android:textCursorDrawable="@drawable/cursor_drawable"
        threshold="2"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/location_container"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <co.vine.android.widget.TypefacesTextView
            android:textSize="14sp"
            android:textColor="@color/white_eighty_percent"
            android:textColorHint="@color/white_eighty_percent"
            android:gravity="center_vertical"
            android:id="@+id/selected_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/preview_location"
            vine:textWeight="3"
            vine:textStyle="0"/>
        <ImageView
            android:gravity="center_vertical"
            android:clickable="false"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="6dp"
            android:src="@drawable/ic_location"/>
    </LinearLayout>
</LinearLayout>
