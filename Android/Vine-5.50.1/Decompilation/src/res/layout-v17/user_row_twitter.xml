<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:background="@drawable/bg_user_row"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="54dp">
    <ImageButton
        android:id="@+id/user_row_btn_follow"
        android:background="@drawable/btn_twitter_follow_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/standard_spacing"
        android:layout_marginRight="12dp"
        android:src="@drawable/btn_twitter_follow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/user_row_btn_follow"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/user_row_btn_follow"
        layout="@layout/user_row_base"/>
</RelativeLayout>
