<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/solid_black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/pagerLeftMask"
        android:background="@color/solid_black"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
    <android.support.v4.view.DraftViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <co.vine.android.widget.DotIndicators
        android:id="@+id/dots"
        android:layout_width="match_parent"
        android:layout_height="@dimen/draft_dots_height"/>
    <View
        android:id="@+id/progress_overlay"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <View
        android:id="@+id/preview_overlay"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
</RelativeLayout>
