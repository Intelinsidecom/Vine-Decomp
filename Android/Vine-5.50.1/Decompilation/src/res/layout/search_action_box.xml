<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:vine="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <co.vine.android.widget.TypefacesTextView
        android:textSize="18sp"
        android:textColor="@color/solid_white"
        android:id="@+id/action_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        vine:textWeight="3"/>
    <co.vine.android.widget.TypefacesEditText
        android:textSize="18sp"
        android:textColorHint="@color/white_forty_percent"
        android:gravity="center_vertical"
        android:id="@+id/query"
        android:paddingRight="50dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/action_bar_title"
        android:layout_centerVertical="true"
        android:textCursorDrawable="@drawable/cursor_drawable"
        vine:textWeight="3"
        style="@style/EditText.SearchQueryView"/>
    <ImageButton
        android:layout_gravity="center"
        android:id="@+id/clear"
        android:background="@android:color/transparent"
        android:visibility="gone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_clear_search"
        android:scaleType="center"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>
