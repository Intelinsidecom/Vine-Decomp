<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:vine="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/root_layout"
    android:background="@drawable/bg_generic"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/spacing_large">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <co.vine.android.widget.TypefacesTextView
            android:gravity="center_vertical"
            android:id="@+id/header_label"
            android:background="@drawable/bg_black_five_percent"
            android:paddingLeft="11dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_header_height"
            android:layout_alignParentLeft="true"/>
        <co.vine.android.widget.TypefacesTextView
            android:id="@+id/view_all"
            android:paddingRight="12dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_all"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <co.vine.android.widget.TypefacesTextView
            android:textColor="@color/black_thirty_five_percent"
            android:id="@+id/post_count"
            android:paddingRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <co.vine.android.widget.TypefacesTextView
            android:textSize="@dimen/font_size_large"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/tag_name"
            android:paddingLeft="11dp"
            android:paddingRight="3dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/post_count"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            vine:textWeight="3"/>
    </RelativeLayout>
</LinearLayout>
