<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:vine="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:background="@color/solid_black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <View
            android:id="@+id/fake_action_bar_placeholder"
            android:layout_width="match_parent"
            android:layout_height="56dp"/>
        <RelativeLayout
            android:id="@+id/videoViewContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <FrameLayout
                android:id="@+id/dimmableVideoContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <co.vine.android.player.StaticSizeVideoView
                    android:id="@+id/sdkVideoView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:id="@+id/dim_overlay"
                    android:background="@color/black_fifty_percent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/preview_actions_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_alignBottom="@+id/dimmableVideoContainer"
                android:layout_alignParentRight="true">
                <RelativeLayout
                    android:id="@+id/preview_edit"
                    android:background="@drawable/bg_capture_edit"
                    android:paddingLeft="8dp"
                    android:paddingTop="6dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/edit_image"
                        android:clickable="false"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_video_edit_small"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"/>
                    <co.vine.android.widget.TypefacesTextView
                        android:textSize="14sp"
                        android:textColor="@color/solid_white"
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="@string/discard_edit"
                        android:layout_toRightOf="@+id/edit_image"
                        android:layout_centerVertical="true"
                        vine:textWeight="2"
                        vine:textStyle="0"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        <FrameLayout
            android:id="@+id/below_video_container"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <FrameLayout
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@+id/main_container"/>
</RelativeLayout>
