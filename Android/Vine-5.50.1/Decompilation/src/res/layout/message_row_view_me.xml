<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="@dimen/conversation_row_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include layout="@layout/message_row_view_timestamp_text"/>
    <include layout="@layout/message_row_view_top_message_container"/>
    <FrameLayout
        android:layout_gravity="center_horizontal"
        android:id="@+id/video_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/video_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
            <co.vine.android.views.SdkProgressBar
                android:id="@+id/video_load_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:indeterminate="true"
                android:layout_centerInParent="true"
                style="?android:attr/progressBarStyleLarge"/>
            <co.vine.android.player.SdkVideoView
                android:id="@+id/video_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"/>
            <RelativeLayout
                android:id="@+id/nibs"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/nibs_nib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/vm_nib_bottom_margin"
                    android:src="@drawable/vm_nib"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"/>
                <View
                    android:background="@color/solid_white"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/vm_nib_height"
                    android:layout_toLeftOf="@+id/nibs_nib"
                    android:layout_alignBottom="@+id/nibs_nib"/>
                <ImageView
                    android:background="@drawable/vm_corner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/vm_nib_bottom_margin"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/shared_post_nibs"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/post_nib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/vm_nib_bottom_margin"
                    android:src="@drawable/vm_nib"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"/>
                <View
                    android:background="@color/solid_white"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/vm_nib_height"
                    android:layout_alignRight="@+id/post_nib"
                    android:layout_alignBottom="@+id/post_nib"/>
                <ImageView
                    android:background="@drawable/vm_corner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/vm_nib_bottom_margin"/>
            </RelativeLayout>
        </RelativeLayout>
        <View
            android:layout_gravity="bottom"
            android:background="@color/solid_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_conversation"/>
    </FrameLayout>
    <RelativeLayout
        android:gravity="bottom|right"
        android:id="@+id/message_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/conversation_avatar_size">
        <ImageView
            android:id="@+id/message_container_user_image"
            android:background="@android:color/transparent"
            android:layout_width="@dimen/conversation_avatar_size"
            android:layout_height="@dimen/conversation_avatar_size"
            android:layout_marginRight="@dimen/spacing_conversation"
            android:scaleType="centerCrop"
            android:layout_alignParentBottom="true"/>
        <co.vine.android.views.SdkProgressBar
            android:id="@+id/retry_progress_normal"
            android:visibility="gone"
            android:layout_width="@dimen/conversation_avatar_size"
            android:layout_height="@dimen/conversation_avatar_size"
            android:layout_marginRight="@dimen/spacing_conversation"
            android:indeterminate="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            style="?android:attr/progressBarStyleLarge"/>
        <ImageView
            android:id="@+id/nibs_chat_nib"
            android:paddingBottom="@dimen/conversation_nib_bottom_padding"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="@dimen/conversation_side_padding"
            android:src="@drawable/vm_nib_me"
            android:layout_toLeftOf="@+id/message_container_user_image"
            android:layout_alignParentBottom="true"/>
        <co.vine.android.widget.TightTextView
            android:gravity="bottom|right"
            android:id="@+id/message_container_message"
            android:padding="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/conversation_row_far_padding"
            android:layout_marginRight="0dp"
            android:layout_toLeftOf="@+id/nibs_chat_nib"
            style="@style/MessageText"/>
    </RelativeLayout>
    <RelativeLayout
        android:gravity="center"
        android:id="@+id/post_message_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <co.vine.android.widget.TightTextView
            android:gravity="center"
            android:id="@+id/post_message_container_message"
            android:padding="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/conversation_side_padding"
            android:layout_marginRight="@dimen/conversation_side_padding"
            style="@style/MessageText.Post"/>
    </RelativeLayout>
    <co.vine.android.widget.TypefacesTextView
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/solid_light_gray_vm"
        android:gravity="center"
        android:id="@+id/error_message"
        android:paddingLeft="@dimen/spacing_small"
        android:paddingRight="@dimen/spacing_small"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/conversation_avatar_size_with_margins"
        android:layout_marginRight="@dimen/conversation_avatar_size_with_margins"/>
    <View
        android:id="@+id/message_bottom_padding_for_last_item"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/conversation_row_padding"/>
</LinearLayout>
