<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <co.vine.android.widget.ScrollDeltaScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <View
                android:id="@+id/spacer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tabbar_height"/>
            <co.vine.android.views.WebViewContainerLayout
                android:id="@+id/webview_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <include
                android:id="@+id/empty"
                layout="@layout/sadface_empty"/>
        </LinearLayout>
    </co.vine.android.widget.ScrollDeltaScrollView>
    <co.vine.android.widget.ScrollAwayFrameLayout
        android:id="@+id/search_bar_container"
        android:background="@color/solid_super_light_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tabbar_height">
        <ImageView
            android:id="@+id/background_rect"
            android:padding="8dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/rounded_corner_rect_4"/>
        <co.vine.android.widget.TypefacesTextView
            android:textColor="@color/solid_gray"
            android:gravity="center_vertical"
            android:id="@+id/search_bar"
            android:background="@android:color/transparent"
            android:padding="2dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tabbar_height"
            android:layout_marginLeft="14dp"
            android:text="@string/universal_search_hint"
            android:drawableLeft="@drawable/ic_search_hint"
            android:drawablePadding="6dp"/>
    </co.vine.android.widget.ScrollAwayFrameLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/real_sadface"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/sadface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:layout_marginBottom="@dimen/spacing_large"
            android:src="@drawable/background_sadface"/>
        <co.vine.android.widget.TypefacesTextView
            android:gravity="center"
            android:id="@+id/empty_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            style="@style/Byline"/>
    </LinearLayout>
    <ImageView
        android:layout_gravity="bottom|right"
        android:id="@+id/search"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="9dp"
        android:src="@drawable/ic_explore_search"/>
</FrameLayout>
