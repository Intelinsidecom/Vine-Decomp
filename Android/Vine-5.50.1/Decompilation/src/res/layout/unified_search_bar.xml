<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:vine="http://schemas.android.com/apk/res-auto"
    android:id="@+id/unified_search_bar"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <co.vine.android.search.SearchBarEditText
        android:id="@+id/search_query"
        android:paddingRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        vine:textWeight="3"
        style="@style/EditText.UnifiedSearchQueryView"/>
    <ImageButton
        android:layout_gravity="center"
        android:id="@+id/clear"
        android:background="@android:color/transparent"
        android:visibility="gone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_smallx"
        android:scaleType="center"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>
