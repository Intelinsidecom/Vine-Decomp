<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="top|left"
    android:orientation="horizontal"
    android:id="@+id/revine_and_byline_container"
    android:background="@color/solid_white"
    android:paddingLeft="6dp"
    android:paddingTop="0dp"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp">
    <ImageView
        android:id="@+id/byline_icon"
        android:layout_width="12dp"
        android:layout_height="8dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_revine_attribution"
        android:scaleType="centerCrop"/>
    <co.vine.android.widget.TypefacesTextView
        android:textSize="11sp"
        android:textColor="#59000000"
        android:id="@+id/revine_line_text"
        android:paddingLeft="4dp"
        android:paddingTop="0dp"
        android:paddingRight="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        textWeight="2"
        textStyle="0"/>
    <ImageView
        android:id="@+id/byline_icon_gear"
        android:paddingTop="3dp"
        android:layout_width="10dp"
        android:layout_height="13dp"
        android:layout_marginBottom="2dp"
        android:scaleType="centerCrop"/>
</LinearLayout>
