<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/draft_page_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true">
    <View
        android:id="@+id/draftPageMask"
        android:background="@color/solid_black"
        android:padding="0dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"/>
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/draft_container"
        android:padding="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/draft_margin"
        android:layout_marginTop="0dp"
        android:layout_marginRight="@dimen/draft_margin"
        android:layout_marginBottom="0dp"
        android:layout_alignParentLeft="true">
        <RelativeLayout
            android:id="@+id/videoViewContainer"
            android:layout_width="@dimen/draft_video_size"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progress_view_container"
            android:layout_centerInParent="true">
            <ImageView
                android:id="@+id/thumb"
                android:padding="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"/>
            <co.vine.android.player.SdkVideoView
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"/>
            <FrameLayout
                android:id="@+id/trash"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_trash"/>
            </FrameLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/progress_view_container"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/draft_progress_view_height"
            android:layout_centerHorizontal="true">
            <co.vine.android.recorder.RegularProgressView
                android:id="@+id/progress"
                android:background="@color/bg_capture_progress"
                android:layout_width="@dimen/draft_video_size"
                android:layout_height="@dimen/draft_progress_view_height"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
