<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:vine="http://schemas.android.com/apk/res-auto"
    android:background="@color/conversation_menu_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/layout_root"
        android:background="@color/conversation_menu_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/menu_list_header"
            android:background="@color/conversation_menu_header_bg"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentTop="true">
            <RelativeLayout
                android:id="@+id/menu_action_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <co.vine.android.widget.TypefacesTextView
                    android:textSize="@dimen/font_size_xlarge"
                    android:textColor="@color/solid_white"
                    android:id="@+id/menu_list_title"
                    android:background="@null"
                    android:paddingLeft="@dimen/spacing_messages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/messages_title"
                    android:singleLine="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    vine:textWeight="3"/>
                <ImageButton
                    android:id="@+id/menu_search"
                    android:background="@android:color/transparent"
                    android:padding="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_vm_search"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/menu_search_container"
                android:background="@color/solid_black"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout
                    android:id="@+id/clear_search"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:background="@android:color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_clear_search"
                        android:layout_alignParentRight="true"/>
                </FrameLayout>
                <co.vine.android.views.SdkProgressBar
                    android:id="@+id/search_in_progress"
                    android:visibility="gone"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="@dimen/spacing_small"
                    android:indeterminate="true"
                    android:layout_toLeftOf="@+id/clear_search"
                    android:layout_centerVertical="true"
                    style="?android:attr/progressBarStyleLarge"/>
                <co.vine.android.widget.TypefacesEditText
                    android:textColor="@color/solid_white"
                    android:textColorHint="#66ffffff"
                    android:id="@+id/search_field"
                    android:background="@null"
                    android:paddingLeft="@dimen/spacing_small"
                    android:paddingRight="55dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/search_people"
                    android:singleLine="true"
                    android:layout_toLeftOf="@+id/clear_search"
                    android:textCursorDrawable="@drawable/cursor_drawable"/>
            </RelativeLayout>
        </RelativeLayout>
        <co.vine.android.views.TouchableRelativeLayout
            android:id="@+id/menu_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/menu_list_header"/>
        <View
            android:id="@+id/saerch_toggle_background_view"
            android:background="@color/conversation_menu_search_bg"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/menu_list_header"/>
        <com.twitter.android.widget.RefreshableListView
            android:id="@+id/search_result"
            android:visibility="gone"
            android:descendantFocusability="afterDescendants"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/menu_list_header"
            style="@style/List.Refreshable.ConversationMenu.Search"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/search_real_sadface"
            android:background="@color/solid_white"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/menu_list_header">
            <ImageView
                android:id="@+id/search_sadface"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_marginBottom="@dimen/spacing_large"
                android:src="@drawable/background_sadface"/>
            <co.vine.android.widget.TypefacesTextView
                android:gravity="center"
                android:id="@+id/search_empty_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/no_people_found"
                style="@style/Byline"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
