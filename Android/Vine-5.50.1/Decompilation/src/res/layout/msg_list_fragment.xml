<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <co.vine.android.widget.PinnedHeaderListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/List.Refreshable"/>
    <include
        android:id="@android:id/empty"
        layout="@layout/sadface_empty"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/real_sadface"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/sadface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:layout_marginBottom="@dimen/spacing_large"
            android:src="@drawable/background_sadface"/>
        <co.vine.android.widget.TypefacesTextView
            android:gravity="center"
            android:id="@+id/empty_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            style="@style/Byline"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/find_friends"
        android:background="@drawable/btn_friends_cta"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/solid_white"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/find_friends_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/find_friends_on_vine"
            android:singleLine="true"/>
    </FrameLayout>
</RelativeLayout>
