<?xml version="1.0" encoding="utf-8"?>
<co.vine.android.widget.tabs.TabIndicator xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_width="0dp"
    android:layout_height="@dimen/tabbar_height"
    android:layout_margin="0px"
    android:layout_weight="1">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <co.vine.android.widget.TypefacesTextView
            android:id="@+id/tab_text"
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TabbedTagResultsIndicator"/>
        <View
            android:id="@+id/strip"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </LinearLayout>
</co.vine.android.widget.tabs.TabIndicator>
