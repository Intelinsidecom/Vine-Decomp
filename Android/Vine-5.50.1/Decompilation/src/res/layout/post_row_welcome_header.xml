<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_content_container"
    android:paddingLeft="16dp"
    android:paddingTop="10dp"
    android:paddingRight="8dp"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/user_image"
        android:clickable="false"
        android:layout_width="@dimen/user_image_size"
        android:layout_height="@dimen/user_image_size"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>
    <RelativeLayout
        android:id="@+id/welcome_follow_button"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
        <FrameLayout
            android:id="@+id/welcome_follow"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/welcome_feed_follow_height">
            <ImageView
                android:id="@+id/follow_background"
                android:layout_width="@dimen/welcome_feed_follow_width"
                android:layout_height="match_parent"
                android:src="@drawable/follow_btn_default"/>
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="13dp">
                <ImageView
                    android:layout_width="@dimen/welcome_feed_plus_size"
                    android:layout_height="@dimen/welcome_feed_plus_size"
                    android:layout_marginRight="6dp"
                    android:src="@drawable/follow_btn_plus_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/follow"
                    style="@style/WhiteButtonGreenText"/>
            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/welcome_unfollow"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/welcome_feed_follow_height">
            <ImageView
                android:id="@+id/unfollow_background"
                android:layout_width="@dimen/welcome_feed_follow_width"
                android:layout_height="match_parent"
                android:src="@drawable/follow_btn_selected"/>
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-1dp"
                android:text="@string/following"
                style="@style/GreenButtonWhiteText"/>
        </FrameLayout>
    </RelativeLayout>
    <co.vine.android.widget.TypefacesTextView
        android:ellipsize="end"
        android:id="@+id/username"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="-2dp"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/follow_button"
        android:layout_toRightOf="@+id/user_image"
        android:layout_centerVertical="true"
        style="@style/TimelineUsername"/>
</RelativeLayout>
