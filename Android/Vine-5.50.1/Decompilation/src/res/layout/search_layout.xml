<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.twitter.android.widget.RefreshableListView
        android:id="@+id/results"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/List.Refreshable"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/error_state"
        android:background="@color/solid_white"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textColor="@color/black_thirty_five_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="@string/somethings_not_right"/>
        <Button
            android:id="@+id/try_again"
            android:background="@drawable/bg_signup_email"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_width="wrap_content"
            android:text="@string/try_again"
            style="@style/SignUpButton"/>
    </LinearLayout>
</FrameLayout>
